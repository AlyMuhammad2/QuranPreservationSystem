@{
    ViewData["Title"] = "تصدير البيانات";
    Layout = "_DashboardLayout";
}

<!-- Page Header -->
<div class="page-header">
    <div class="page-title">
        <i class="fas fa-file-excel"></i>
        <h2>تصدير البيانات</h2>
    </div>
    <div class="page-actions">
        <a href="@Url.Action("Index")" class="btn btn-outline">
            <i class="fas fa-arrow-right"></i> العودة
        </a>
    </div>
</div>

<!-- Export Options Grid -->
<div class="export-grid">
    <!-- تصدير المراكز -->
    <div class="export-card">
        <div class="export-icon" style="background: rgba(46, 125, 50, 0.1);">
            <i class="fas fa-mosque" style="color: var(--primary-color);"></i>
        </div>
        <h3>تقرير المراكز</h3>
        <p>تصدير بيانات المراكز القرآنية مع الإحصائيات التفصيلية</p>
        <div class="export-actions">
            <a href="@Url.Action("CentersReport")" class="btn btn-outline btn-block">
                <i class="fas fa-eye"></i> معاينة
            </a>
            <a href="@Url.Action("ExportCenters")" class="btn btn-success btn-block">
                <i class="fas fa-download"></i> تصدير Excel
            </a>
        </div>
    </div>

    <!-- تصدير المدرسين -->
    <div class="export-card">
        <div class="export-icon" style="background: rgba(67, 160, 71, 0.1);">
            <i class="fas fa-chalkboard-teacher" style="color: var(--success-color);"></i>
        </div>
        <h3>تقرير المدرسين</h3>
        <p>تصدير بيانات جميع المدرسين مع التفاصيل الكاملة</p>
        <div class="export-actions">
            <a href="@Url.Action("Index", "Teachers")" class="btn btn-outline btn-block">
                <i class="fas fa-eye"></i> معاينة
            </a>
            <a href="@Url.Action("ExportTeachers")" class="btn btn-success btn-block">
                <i class="fas fa-download"></i> تصدير Excel
            </a>
        </div>
    </div>

    <!-- تصدير الطلاب -->
    <div class="export-card">
        <div class="export-icon" style="background: rgba(33, 150, 243, 0.1);">
            <i class="fas fa-user-graduate" style="color: #2196f3;"></i>
        </div>
        <h3>تقرير الطلاب</h3>
        <p>تصدير بيانات جميع الطلاب المسجلين في النظام</p>
        <div class="export-actions">
            <a href="@Url.Action("Index", "Students")" class="btn btn-outline btn-block">
                <i class="fas fa-eye"></i> معاينة
            </a>
            <a href="@Url.Action("ExportStudents")" class="btn btn-success btn-block">
                <i class="fas fa-download"></i> تصدير Excel
            </a>
        </div>
    </div>

    <!-- تصدير الدورات -->
    <div class="export-card">
        <div class="export-icon" style="background: rgba(255, 152, 0, 0.1);">
            <i class="fas fa-book" style="color: var(--warning-color);"></i>
        </div>
        <h3>تقرير الدورات</h3>
        <p>تصدير بيانات جميع الدورات والمستويات</p>
        <div class="export-actions">
            <a href="@Url.Action("Index", "Courses")" class="btn btn-outline btn-block">
                <i class="fas fa-eye"></i> معاينة
            </a>
            <a href="@Url.Action("ExportCourses")" class="btn btn-success btn-block">
                <i class="fas fa-download"></i> تصدير Excel
            </a>
        </div>
    </div>

    <!-- تصدير التسجيلات -->
    <div class="export-card">
        <div class="export-icon" style="background: rgba(229, 57, 53, 0.1);">
            <i class="fas fa-user-check" style="color: var(--danger-color);"></i>
        </div>
        <h3>تقرير التسجيلات</h3>
        <p>تصدير بيانات تسجيلات الطلاب في الدورات</p>
        <div class="export-actions">
            <a href="@Url.Action("Index", "Enrollments")" class="btn btn-outline btn-block">
                <i class="fas fa-eye"></i> معاينة
            </a>
            <a href="@Url.Action("ExportEnrollments")" class="btn btn-success btn-block">
                <i class="fas fa-download"></i> تصدير Excel
            </a>
        </div>
    </div>

    <!-- تصدير الاختبارات -->
    <div class="export-card">
        <div class="export-icon" style="background: rgba(156, 39, 176, 0.1);">
            <i class="fas fa-clipboard-list" style="color: #9c27b0;"></i>
        </div>
        <h3>تقرير الاختبارات</h3>
        <p>تصدير بيانات جميع الاختبارات والنتائج</p>
        <div class="export-actions">
            <a href="@Url.Action("Index", "Exams")" class="btn btn-outline btn-block">
                <i class="fas fa-eye"></i> معاينة
            </a>
            <a href="@Url.Action("ExportExams")" class="btn btn-success btn-block">
                <i class="fas fa-download"></i> تصدير Excel
            </a>
        </div>
    </div>

    <!-- تصدير ديوان الحفاظ -->
    <div class="export-card featured">
        <div class="export-icon">
            <i class="fas fa-book-quran"></i>
        </div>
        <h3>ديوان الحفاظ</h3>
        <p>تصدير سجل حفاظ القرآن الكريم الشامل</p>
        <div class="export-actions">
            <a href="@Url.Action("Index", "HafizRegistry")" class="btn btn-light btn-block">
                <i class="fas fa-eye"></i> معاينة وفلتر
            </a>
            <a href="@Url.Action("ExportToExcel", "HafizRegistry")" class="btn btn-light-outline btn-block">
                <i class="fas fa-download"></i> تصدير Excel
            </a>
        </div>
    </div>
</div>

<!-- Info Note -->
<div class="card" style="margin-top: 30px;">
    <div class="card-header" style="background: linear-gradient(135deg, #2196f3 0%, #1976d2 100%);">
        <i class="fas fa-info-circle"></i>
        <span>ملاحظة هامة</span>
    </div>
    <div class="card-body">
        <div class="info-content">
            <i class="fas fa-lightbulb" style="font-size: 2rem; color: #ffc107;"></i>
            <div>
                <h4>نصيحة للتصدير الأفضل</h4>
                <p>يمكنك استخدام <strong>البحث والفلترة</strong> في كل صفحة قبل التصدير للحصول على البيانات المطلوبة فقط.</p>
                <ul>
                    <li>افتح الموديول المطلوب (مثلاً: الطلاب)</li>
                    <li>استخدم البحث والفلترة حسب الحاجة</li>
                    <li>اضغط على زر "تصدير Excel" للحصول على النتائج المفلترة</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/dashboard.css" />
    <style>
        .export-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .export-card {
            background: white;
            border-radius: 12px;
            padding: 25px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.06);
            text-align: center;
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }

        .export-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
            border-color: var(--primary-light);
        }

        .export-card.featured {
            background: linear-gradient(135deg, #43a047 0%, #2e7d32 100%);
            color: white;
            grid-column: span 2;
        }

        .export-card.featured h3,
        .export-card.featured p {
            color: white;
        }

        .export-card.featured .export-icon {
            background: rgba(255, 255, 255, 0.2);
        }

        .export-card.featured .export-icon i {
            color: white;
        }

        .export-icon {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            font-size: 2.5rem;
            background: rgba(76, 175, 80, 0.1);
        }

        .export-card h3 {
            color: var(--primary-dark);
            margin-bottom: 10px;
            font-size: 1.2rem;
            font-weight: 700;
        }

        .export-card p {
            color: #666;
            margin-bottom: 20px;
            line-height: 1.6;
            font-size: 0.95rem;
            min-height: 60px;
        }

        .export-actions {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .btn-block {
            width: 100%;
        }

        .btn-light {
            background: white;
            color: var(--primary-dark);
            border: none;
        }

        .btn-light:hover {
            background: rgba(255, 255, 255, 0.9);
        }

        .btn-light-outline {
            background: transparent;
            color: white;
            border: 2px solid white;
        }

        .btn-light-outline:hover {
            background: white;
            color: var(--primary-color);
        }

        .info-content {
            display: flex;
            gap: 20px;
            align-items: flex-start;
        }

        .info-content h4 {
            color: var(--primary-dark);
            margin-bottom: 10px;
        }

        .info-content p {
            margin-bottom: 15px;
            line-height: 1.6;
        }

        .info-content ul {
            margin-right: 20px;
            color: #555;
        }

        .info-content li {
            margin-bottom: 8px;
            line-height: 1.5;
        }

        @@media (max-width: 768px) {
            .export-grid {
                grid-template-columns: 1fr;
            }

            .export-card.featured {
                grid-column: span 1;
            }

            .info-content {
                flex-direction: column;
            }
        }
    </style>
}
