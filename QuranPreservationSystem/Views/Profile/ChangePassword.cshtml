@model QuranPreservationSystem.Application.DTOs.ChangePasswordDto
@{
    ViewData["Title"] = "تغيير كلمة المرور";
    Layout = "_DashboardLayout";
}

<div class="page-header">
    <div class="page-title">
        <i class="fas fa-key"></i>
        <h2>تغيير كلمة المرور</h2>
    </div>
    <div class="page-actions">
        <a href="@Url.Action("Index")" class="btn btn-outline">
            <i class="fas fa-arrow-right"></i> العودة
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-7">
        <div class="card security-card">
            <div class="card-header security-header">
                <i class="fas fa-shield-alt"></i>
                <span>أمان الحساب</span>
            </div>
            <div class="card-body">
                <!-- Security Tips -->
                <div class="security-tips">
                    <div class="tips-header">
                        <div class="tips-icon">
                            <i class="fas fa-lightbulb"></i>
                        </div>
                        <h6>نصائح لكلمة مرور قوية</h6>
                    </div>
                    <div class="tips-list">
                        <div class="tip-item">
                            <i class="fas fa-check-circle"></i>
                            <span>يجب أن تكون 6 أحرف على الأقل</span>
                        </div>
                        <div class="tip-item">
                            <i class="fas fa-check-circle"></i>
                            <span>استخدم مزيجاً من الأحرف الكبيرة والصغيرة</span>
                        </div>
                        <div class="tip-item">
                            <i class="fas fa-check-circle"></i>
                            <span>أضف أرقام ورموز خاصة</span>
                        </div>
                        <div class="tip-item">
                            <i class="fas fa-check-circle"></i>
                            <span>تجنب المعلومات الشخصية الواضحة</span>
                        </div>
                    </div>
                </div>

                <form asp-action="ChangePassword" method="post" class="password-form">
                    @Html.AntiForgeryToken()

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>يرجى تصحيح الأخطاء التالية:</strong>
                            <ul class="error-list">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="password-fields">
                        <!-- Current Password -->
                        <div class="form-group">
                            <label asp-for="CurrentPassword" class="form-label">
                                <i class="fas fa-lock"></i>
                                كلمة المرور الحالية
                            </label>
                            <div class="password-input-wrapper">
                                <div class="input-icon">
                                    <i class="fas fa-lock"></i>
                                </div>
                                <input asp-for="CurrentPassword" 
                                       type="password" 
                                       class="form-control password-input" 
                                       id="currentPassword" 
                                       placeholder="أدخل كلمة المرور الحالية" />
                                <button type="button" class="toggle-password" onclick="togglePassword('currentPassword')">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>

                        <!-- New Password -->
                        <div class="form-group">
                            <label asp-for="NewPassword" class="form-label">
                                <i class="fas fa-key"></i>
                                كلمة المرور الجديدة
                            </label>
                            <div class="password-input-wrapper">
                                <div class="input-icon">
                                    <i class="fas fa-key"></i>
                                </div>
                                <input asp-for="NewPassword" 
                                       type="password" 
                                       class="form-control password-input" 
                                       id="newPassword" 
                                       placeholder="أدخل كلمة المرور الجديدة" />
                                <button type="button" class="toggle-password" onclick="togglePassword('newPassword')">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                            
                            <!-- Password Strength Indicator -->
                            <div class="password-strength">
                                <div class="strength-bar-container">
                                    <div class="strength-bar" id="strengthBar"></div>
                                </div>
                                <div class="strength-info">
                                    <span class="strength-text" id="strengthText">قوة كلمة المرور</span>
                                    <span class="strength-percentage" id="strengthPercentage">0%</span>
                                </div>
                            </div>
                        </div>

                        <!-- Confirm Password -->
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="form-label">
                                <i class="fas fa-check-double"></i>
                                تأكيد كلمة المرور
                            </label>
                            <div class="password-input-wrapper">
                                <div class="input-icon">
                                    <i class="fas fa-check-double"></i>
                                </div>
                                <input asp-for="ConfirmPassword" 
                                       type="password" 
                                       class="form-control password-input" 
                                       id="confirmPassword" 
                                       placeholder="أعد إدخال كلمة المرور الجديدة" />
                                <button type="button" class="toggle-password" onclick="togglePassword('confirmPassword')">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-footer">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save"></i>
                            تغيير كلمة المرور
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">
                            <i class="fas fa-times"></i>
                            إلغاء
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/dashboard.css" />
    <style>
        .security-card {
            border: none;
            box-shadow: 0 2px 12px rgba(0,0,0,0.08);
            border-radius: 16px;
            overflow: hidden;
        }

        .security-header {
            background: linear-gradient(135deg, #ffa726, #ff9800);
        }

        .security-tips {
            background: linear-gradient(135deg, #fff9c4, #fff59d);
            border: 2px solid #ffd54f;
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 30px;
        }

        .tips-header {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 16px;
        }

        .tips-icon {
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, #ffa726, #ff9800);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .tips-icon i {
            font-size: 1.5rem;
            color: white;
        }

        .tips-header h6 {
            color: #f57f17;
            font-weight: 700;
            font-size: 1.1rem;
            margin: 0;
        }

        .tips-list {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 12px;
        }

        .tip-item {
            display: flex;
            align-items: center;
            gap: 8px;
            color: #f57f17;
            font-size: 0.9rem;
        }

        .tip-item i {
            color: #66bb6a;
            font-size: 1rem;
        }

        .password-form {
            padding: 10px 0;
        }

        .password-fields {
            display: flex;
            flex-direction: column;
            gap: 24px;
        }

        .form-group {
            margin-bottom: 0;
        }

        .form-label {
            display: flex;
            align-items: center;
            gap: 8px;
            font-weight: 600;
            color: var(--primary-dark);
            margin-bottom: 8px;
            font-size: 0.95rem;
        }

        .form-label i {
            color: var(--primary-color);
            font-size: 1rem;
        }

        .password-input-wrapper {
            position: relative;
            display: flex;
            align-items: center;
        }

        .input-icon {
            position: absolute;
            right: 16px;
            color: var(--primary-color);
            font-size: 1.1rem;
            z-index: 2;
        }

        .password-input {
            padding-right: 48px !important;
            padding-left: 48px !important;
        }

        .form-control {
            padding: 14px 16px;
            border: 2px solid #e1e8ed;
            border-radius: 10px;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            background: white;
            width: 100%;
        }

        .form-control:focus {
            border-color: var(--primary-color);
            background: white;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
        }

        .toggle-password {
            position: absolute;
            left: 12px;
            background: transparent;
            border: none;
            color: #7f8c8d;
            cursor: pointer;
            padding: 8px;
            transition: all 0.3s ease;
            z-index: 2;
        }

        .toggle-password:hover {
            color: var(--primary-color);
        }

        /* Password Strength */
        .password-strength {
            margin-top: 12px;
        }

        .strength-bar-container {
            height: 8px;
            background: #e1e8ed;
            border-radius: 4px;
            overflow: hidden;
            margin-bottom: 8px;
        }

        .strength-bar {
            height: 100%;
            width: 0%;
            transition: all 0.4s ease;
            border-radius: 4px;
        }

        .strength-bar.weak {
            width: 33%;
            background: linear-gradient(90deg, #ef5350, #e53935);
        }

        .strength-bar.medium {
            width: 66%;
            background: linear-gradient(90deg, #ffa726, #ff9800);
        }

        .strength-bar.strong {
            width: 100%;
            background: linear-gradient(90deg, #66bb6a, #4caf50);
        }

        .strength-info {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .strength-text {
            font-size: 0.85rem;
            font-weight: 600;
        }

        .strength-percentage {
            font-size: 0.85rem;
            font-weight: 700;
            color: #7f8c8d;
        }

        .error-list {
            margin: 12px 0 0;
            padding-right: 20px;
        }

        .error-list li {
            margin-bottom: 4px;
        }

        .form-footer {
            display: flex;
            gap: 16px;
            justify-content: center;
            padding-top: 30px;
            border-top: 2px solid #e8eef3;
            margin-top: 30px;
        }

        .form-footer .btn {
            min-width: 180px;
            padding: 14px 32px;
            font-weight: 600;
            font-size: 1rem;
        }

        @@media (max-width: 768px) {
            .tips-list {
                grid-template-columns: 1fr;
            }

            .security-tips {
                text-align: center;
            }

            .tips-header {
                justify-content: center;
            }

            .form-footer {
                flex-direction: column;
            }

            .form-footer .btn {
                width: 100%;
            }
        }
    </style>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Toggle password visibility
        function togglePassword(inputId) {
            const input = document.getElementById(inputId);
            const button = input.parentElement.querySelector('.toggle-password');
            const icon = button.querySelector('i');

            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }

        // Password strength checker
        const newPasswordInput = document.getElementById('newPassword');
        if (newPasswordInput) {
            newPasswordInput.addEventListener('input', function(e) {
                const password = e.target.value;
                const strengthBar = document.getElementById('strengthBar');
                const strengthText = document.getElementById('strengthText');
                const strengthPercentage = document.getElementById('strengthPercentage');

                // Calculate strength
                let score = 0;
                let percentage = 0;

                if (password.length >= 6) {
                    score += 20;
                    percentage += 20;
                }
                if (password.length >= 10) {
                    score += 20;
                    percentage += 20;
                }
                if (/[a-z]/.test(password) && /[A-Z]/.test(password)) {
                    score += 20;
                    percentage += 20;
                }
                if (/\d/.test(password)) {
                    score += 20;
                    percentage += 20;
                }
                if (/[^a-zA-Z0-9]/.test(password)) {
                    score += 20;
                    percentage += 20;
                }

                // Remove previous classes
                strengthBar.classList.remove('weak', 'medium', 'strong');

                // Apply new class and text
                if (score <= 40) {
                    strengthBar.classList.add('weak');
                    strengthText.textContent = 'ضعيفة';
                    strengthText.style.color = '#e53935';
                } else if (score <= 80) {
                    strengthBar.classList.add('medium');
                    strengthText.textContent = 'متوسطة';
                    strengthText.style.color = '#ff9800';
                } else {
                    strengthBar.classList.add('strong');
                    strengthText.textContent = 'قوية';
                    strengthText.style.color = '#4caf50';
                }

                strengthPercentage.textContent = percentage + '%';
                strengthPercentage.style.color = score <= 40 ? '#e53935' : (score <= 80 ? '#ff9800' : '#4caf50');
            });
        }

        // Password match checker
        const confirmPasswordInput = document.getElementById('confirmPassword');
        if (confirmPasswordInput) {
            confirmPasswordInput.addEventListener('input', function(e) {
                const newPass = document.getElementById('newPassword').value;
                const confirmPass = e.target.value;

                if (confirmPass && newPass !== confirmPass) {
                    confirmPasswordInput.style.borderColor = '#e53935';
                } else if (confirmPass && newPass === confirmPass) {
                    confirmPasswordInput.style.borderColor = '#4caf50';
                } else {
                    confirmPasswordInput.style.borderColor = '#e1e8ed';
                }
            });
        }
    </script>
}
