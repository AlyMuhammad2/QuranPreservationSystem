@model QuranPreservationSystem.Application.DTOs.ProfileDto
@{
    ViewData["Title"] = "الملف الشخصي";
    Layout = "_DashboardLayout";
}

<div class="page-header">
    <div class="page-title">
        <i class="fas fa-user-circle"></i>
        <h2>الملف الشخصي</h2>
    </div>
    <div class="page-actions">
        <button type="button" class="btn btn-primary" onclick="openEditModal()">
            <i class="fas fa-edit"></i> تعديل البيانات
        </button>
        <button type="button" class="btn btn-warning" onclick="openPasswordModal()">
            <i class="fas fa-key"></i> تغيير كلمة المرور
        </button>
    </div>
</div>

<div class="row">
    <div class="col-lg-4">
        <div class="card profile-card">
            <div class="profile-card-header">
                <div class="header-pattern"></div>
                <div class="profile-avatar-wrapper">
                    <div class="profile-avatar">
                        <i class="fas fa-user-circle"></i>
                    </div>
                    <span class="avatar-badge">
                        <i class="fas fa-check-circle"></i>
                    </span>
                </div>
            </div>
            <div class="card-body text-center">
                <h3 class="profile-name">@Model.FullName</h3>
                <p class="profile-username">@@@Model.UserName</p>
                <p class="profile-role">
                    <span class="badge-role">
                        <i class="fas fa-shield-alt"></i>
                        @Model.Role
                    </span>
                </p>
                <div class="profile-stats">
                    <div class="stat-item">
                        <div class="stat-icon-small">
                        <i class="fas fa-calendar-plus"></i>
                        </div>
                        <div class="stat-details">
                            <span class="stat-label">تاريخ الانضمام</span>
                            <strong class="stat-value">@Model.CreatedAt.ToLocalTime().ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("ar-SA"))</strong>
                    </div>
                </div>
                    <div class="stat-item">
                        <div class="stat-icon-small">
                            <i class="fas fa-clock"></i>
                        </div>
                        <div class="stat-details">
                            <span class="stat-label">آخر تحديث</span>
                            <strong class="stat-value">@DateTime.Now.ToString("dd/MM/yyyy")</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <!-- Account Information Card -->
        <div class="card info-card">
            <div class="card-header-modern">
                <div class="header-content">
                    <div class="header-icon-wrapper">
                        <i class="fas fa-user-shield"></i>
                    </div>
                    <div class="header-text">
                        <h4>معلومات الحساب</h4>
                        <p>البيانات الشخصية وتفاصيل الحساب</p>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="info-grid">
                    <div class="info-item">
                        <div class="info-icon-wrapper">
                            <div class="info-icon blue">
                                <i class="fas fa-user"></i>
                            </div>
                        </div>
                        <div class="info-content">
                            <span class="info-label">اسم المستخدم</span>
                            <strong class="info-value">@Model.UserName</strong>
                        </div>
                    </div>

                    <div class="info-item">
                        <div class="info-icon-wrapper">
                            <div class="info-icon orange">
                                <i class="fas fa-envelope"></i>
                            </div>
                        </div>
                        <div class="info-content">
                            <span class="info-label">البريد الإلكتروني</span>
                            <strong class="info-value">@Model.Email</strong>
                        </div>
                    </div>

                    <div class="info-item">
                        <div class="info-icon-wrapper">
                            <div class="info-icon green">
                                <i class="fas fa-id-card"></i>
                            </div>
                        </div>
                        <div class="info-content">
                            <span class="info-label">الاسم الكامل</span>
                            <strong class="info-value">@Model.FullName</strong>
                        </div>
                    </div>

                    <div class="info-item">
                        <div class="info-icon-wrapper">
                            <div class="info-icon purple">
                                <i class="fas fa-phone"></i>
                            </div>
                        </div>
                        <div class="info-content">
                            <span class="info-label">رقم الهاتف</span>
                            <strong class="info-value">@(Model.PhoneNumber ?? "غير محدد")</strong>
                        </div>
                    </div>

                    <div class="info-item">
                        <div class="info-icon-wrapper">
                            <div class="info-icon teal">
                                <i class="fas fa-shield-alt"></i>
                            </div>
                        </div>
                        <div class="info-content">
                            <span class="info-label">الدور الوظيفي</span>
                            <span class="badge-role-inline">
                                <i class="fas fa-star"></i>
                                @Model.Role
                            </span>
                        </div>
                    </div>

                    <div class="info-item">
                        <div class="info-icon-wrapper">
                            <div class="info-icon pink">
                                <i class="fas fa-calendar-alt"></i>
                            </div>
                        </div>
                        <div class="info-content">
                            <span class="info-label">تاريخ الإنشاء</span>
                            <strong class="info-value">@Model.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy - hh:mm tt")</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions Card -->
        <div class="card actions-card" style="margin-top: 20px;">
            <div class="card-header-modern actions-header">
                <div class="header-content">
                    <div class="header-icon-wrapper">
                        <i class="fas fa-sliders-h"></i>
                    </div>
                    <div class="header-text">
                        <h4>إعدادات الحساب</h4>
                        <p>إدارة حسابك وتحديث بياناتك</p>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="quick-actions-grid">
                    <div class="quick-action-card" onclick="openEditModal()">
                        <div class="action-card-icon edit">
                            <i class="fas fa-user-edit"></i>
                        </div>
                        <div class="action-card-content">
                            <h5>تعديل البيانات</h5>
                            <p>تحديث المعلومات الشخصية</p>
                        </div>
                        <div class="action-card-arrow">
                            <i class="fas fa-arrow-left"></i>
                        </div>
                    </div>

                    <div class="quick-action-card" onclick="openPasswordModal()">
                        <div class="action-card-icon password">
                            <i class="fas fa-key"></i>
                        </div>
                        <div class="action-card-content">
                            <h5>تغيير كلمة المرور</h5>
                            <p>تحديث كلمة مرور الحساب</p>
                        </div>
                        <div class="action-card-arrow">
                            <i class="fas fa-arrow-left"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Profile Modal -->
<div class="modal-overlay" id="editModal">
    <div class="modal-container">
        <div class="modal-header">
            <h3><i class="fas fa-user-edit"></i> تعديل الملف الشخصي</h3>
            <button type="button" class="modal-close" onclick="closeEditModal()">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <form asp-action="Edit" method="post" id="editForm">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div class="modal-body">
                <div class="form-row-group">
                    <div class="form-group-modal">
                        <label asp-for="UserName" class="form-label-modal">
                            <i class="fas fa-user"></i> اسم المستخدم
                        </label>
                        <input asp-for="UserName" class="form-control-modal" placeholder="أدخل اسم المستخدم" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group-modal">
                        <label asp-for="Email" class="form-label-modal">
                            <i class="fas fa-envelope"></i> البريد الإلكتروني
                        </label>
                        <input asp-for="Email" type="email" class="form-control-modal" placeholder="أدخل البريد الإلكتروني" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row-group">
                    <div class="form-group-modal">
                        <label asp-for="FullName" class="form-label-modal">
                            <i class="fas fa-id-card"></i> الاسم الكامل
                        </label>
                        <input asp-for="FullName" class="form-control-modal" placeholder="أدخل الاسم الكامل" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="form-group-modal">
                        <label asp-for="PhoneNumber" class="form-label-modal">
                            <i class="fas fa-phone"></i> رقم الهاتف <span class="optional-text">(اختياري)</span>
                        </label>
                        <input asp-for="PhoneNumber" class="form-control-modal" placeholder="أدخل رقم الهاتف" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary btn-modal">
                    <i class="fas fa-save"></i> حفظ التغييرات
                </button>
                <button type="button" class="btn btn-secondary btn-modal" onclick="closeEditModal()">
                    <i class="fas fa-times"></i> إلغاء
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Change Password Modal -->
<div class="modal-overlay" id="passwordModal">
    <div class="modal-container">
        <div class="modal-header password-header">
            <h3><i class="fas fa-key"></i> تغيير كلمة المرور</h3>
            <button type="button" class="modal-close" onclick="closePasswordModal()">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <form asp-action="ChangePassword" method="post" id="passwordForm">
            @Html.AntiForgeryToken()
            <div class="modal-body">
                <div class="password-tips">
                    <div class="tips-icon-small">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <div class="tips-content">
                        <strong>كلمة مرور قوية:</strong>
                        <span>6 أحرف على الأقل، أحرف كبيرة وصغيرة، أرقام ورموز</span>
                    </div>
                </div>

                <div class="form-group-modal">
                    <label class="form-label-modal">
                        <i class="fas fa-lock"></i> كلمة المرور الحالية
                    </label>
                    <div class="password-input-group">
                        <input type="password" name="CurrentPassword" id="currentPassword" class="form-control-modal" placeholder="أدخل كلمة المرور الحالية" required />
                        <button type="button" class="password-toggle-btn" onclick="togglePasswordVisibility('currentPassword')">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                </div>

                <div class="form-group-modal">
                    <label class="form-label-modal">
                        <i class="fas fa-key"></i> كلمة المرور الجديدة
                    </label>
                    <div class="password-input-group">
                        <input type="password" name="NewPassword" id="newPassword" class="form-control-modal" placeholder="أدخل كلمة المرور الجديدة" required oninput="checkPasswordStrength()" />
                        <button type="button" class="password-toggle-btn" onclick="togglePasswordVisibility('newPassword')">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <div class="password-strength-bar">
                        <div class="strength-bar-fill" id="strengthBar"></div>
                    </div>
                    <div class="strength-text" id="strengthText"></div>
                </div>

                <div class="form-group-modal">
                    <label class="form-label-modal">
                        <i class="fas fa-check-double"></i> تأكيد كلمة المرور
                    </label>
                    <div class="password-input-group">
                        <input type="password" name="ConfirmPassword" id="confirmPassword" class="form-control-modal" placeholder="أعد إدخال كلمة المرور الجديدة" required oninput="checkPasswordMatch()" />
                        <button type="button" class="password-toggle-btn" onclick="togglePasswordVisibility('confirmPassword')">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <div class="password-match-text" id="matchText"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-warning btn-modal">
                    <i class="fas fa-key"></i> تغيير كلمة المرور
                </button>
                <button type="button" class="btn btn-secondary btn-modal" onclick="closePasswordModal()">
                    <i class="fas fa-times"></i> إلغاء
                </button>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/dashboard.css" />
    <style>
        .profile-card {
            border: none;
            box-shadow: 0 5px 25px rgba(0,0,0,0.08);
            border-radius: 20px;
            overflow: hidden;
            transition: all 0.3s ease;
            position: relative;
        }

        .profile-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 35px rgba(0,0,0,0.15);
        }

        .profile-card-header {
            background: linear-gradient(135deg, #4caf50 0%, #2e7d32 100%);
            height: 180px;
            position: relative;
            overflow: hidden;
        }

        .header-pattern {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: 
                radial-gradient(circle at 20% 50%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 40% 20%, rgba(255, 255, 255, 0.05) 0%, transparent 50%);
            background-size: cover;
        }

        .profile-avatar-wrapper {
            position: absolute;
            bottom: -50px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 10;
        }

        .profile-avatar {
            width: 140px;
            height: 140px;
            border-radius: 50%;
            background: white;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
            position: relative;
            border: 5px solid white;
        }

        .profile-avatar::before {
            content: '';
            position: absolute;
            inset: -5px;
            border-radius: 50%;
            padding: 5px;
            background: linear-gradient(135deg, #66bb6a, #43a047);
            -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
            -webkit-mask-composite: xor;
            mask-composite: exclude;
        }

        .profile-avatar i {
            font-size: 75px;
            background: linear-gradient(135deg, #66bb6a, #2e7d32);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .avatar-badge {
            position: absolute;
            bottom: 5px;
            right: 5px;
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, #4caf50, #2e7d32);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 4px solid white;
            box-shadow: 0 4px 12px rgba(76, 175, 80, 0.4);
            animation: pulse 2s ease-in-out infinite;
        }

        @@keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.1); }
        }

        .avatar-badge i {
            font-size: 18px;
            color: white;
        }

        .card-body {
            padding-top: 70px !important;
        }

        .profile-name {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--primary-dark);
            margin-bottom: 6px;
        }

        .profile-username {
            color: #7f8c8d;
            font-size: 1rem;
            margin-bottom: 12px;
        }

        .profile-role {
            margin-bottom: 25px;
        }

        .badge-role {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: linear-gradient(135deg, #66bb6a 0%, #43a047 100%);
            color: white;
            padding: 8px 20px;
            border-radius: 25px;
            font-size: 0.9rem;
            font-weight: 600;
            box-shadow: 0 4px 15px rgba(76, 175, 80, 0.3);
        }

        .profile-stats {
            border-top: 2px solid #f0f3f5;
            padding-top: 20px;
            margin-top: 20px;
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .stat-item {
            display: flex;
            align-items: center;
            gap: 15px;
            padding: 15px;
            background: linear-gradient(135deg, #f8fafb 0%, #ffffff 100%);
            border-radius: 12px;
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }

        .stat-item:hover {
            border-color: var(--primary-light);
            transform: translateX(-5px);
            box-shadow: 0 4px 15px rgba(76, 175, 80, 0.1);
        }

        .stat-icon-small {
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, #e8f5e9, #c8e6c9);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
        }

        .stat-icon-small i {
            font-size: 1.3rem;
            color: var(--primary-color);
        }

        .stat-details {
            flex: 1;
            text-align: right;
        }

        .stat-label {
            display: block;
            font-size: 0.85rem;
            color: #7f8c8d;
            margin-bottom: 4px;
        }

        .stat-value {
            display: block;
            color: var(--primary-dark);
            font-size: 0.95rem;
            font-weight: 600;
        }

        /* Modern Info Card Styles */
        .info-card {
            border: none;
            box-shadow: 0 5px 25px rgba(0,0,0,0.08);
            border-radius: 20px;
            overflow: hidden;
            margin-bottom: 20px;
        }

        .card-header-modern {
            background: linear-gradient(135deg, #ffffff 0%, #f8fafb 100%);
            border-bottom: 2px solid #e8eef3;
            padding: 25px;
        }

        .header-content {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .header-icon-wrapper {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #66bb6a, #43a047);
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 5px 20px rgba(76, 175, 80, 0.3);
        }

        .header-icon-wrapper i {
            font-size: 1.6rem;
            color: white;
        }

        .header-text h4 {
            margin: 0;
            font-size: 1.3rem;
            font-weight: 700;
            color: var(--primary-dark);
            margin-bottom: 4px;
        }

        .header-text p {
            margin: 0;
            font-size: 0.9rem;
            color: #7f8c8d;
        }

        .info-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
            padding: 10px 0;
        }

        .info-item {
            display: flex;
            align-items: center;
            gap: 15px;
            padding: 20px;
            background: linear-gradient(135deg, #f8fafb 0%, #ffffff 100%);
            border-radius: 15px;
            transition: all 0.3s ease;
            border: 2px solid transparent;
            position: relative;
            overflow: hidden;
        }

        .info-item::before {
            content: '';
            position: absolute;
            top: 0;
            right: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(76, 175, 80, 0.05), transparent);
            transition: right 0.5s ease;
        }

        .info-item:hover::before {
            right: 100%;
        }

