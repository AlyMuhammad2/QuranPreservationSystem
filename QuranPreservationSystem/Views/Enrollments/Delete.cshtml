@model QuranPreservationSystem.Application.DTOs.EnrollmentDto
@{
    ViewData["Title"] = "حذف التسجيل";
    Layout = "_DashboardLayout";
}

<!-- Page Header -->
<div class="page-header">
    <div class="page-title">
        <i class="fas fa-trash"></i>
        <h2>حذف التسجيل</h2>
    </div>
    <div class="page-actions">
        <a href="@Url.Action("Index")" class="btn btn-outline">
            <i class="fas fa-arrow-right"></i> العودة للقائمة
        </a>
    </div>
</div>

<!-- Delete Confirmation -->
<div class="card">
    <div class="card-header" style="background: linear-gradient(135deg, #e53935 0%, #c62828 100%);">
        <i class="fas fa-exclamation-triangle"></i>
        <span>تأكيد الحذف</span>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle"></i>
            <strong>تحذير:</strong> هل أنت متأكد من حذف هذا التسجيل؟ هذا الإجراء لا يمكن التراجع عنه.
        </div>

        <div class="details-grid">
            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-user-graduate"></i>
                    <span>اسم الطالب</span>
                </div>
                <div class="detail-value"><strong>@Model.StudentName</strong></div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-book"></i>
                    <span>الدورة</span>
                </div>
                <div class="detail-value"><strong>@Model.CourseName</strong></div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-chalkboard-teacher"></i>
                    <span>المدرس</span>
                </div>
                <div class="detail-value">@Model.TeacherName</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-mosque"></i>
                    <span>المركز</span>
                </div>
                <div class="detail-value">@Model.CenterName</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-calendar-plus"></i>
                    <span>تاريخ التسجيل</span>
                </div>
                <div class="detail-value">@Model.EnrollmentDate.ToString("dd/MM/yyyy")</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-clipboard-check"></i>
                    <span>الحالة</span>
                </div>
                <div class="detail-value">
                    @switch (Model.Status)
                    {
                        case StudentCourseStatus.Active:
                            <span class="badge badge-success">@Model.Status.GetDisplayName()</span>
                            break;
                        case StudentCourseStatus.Completed:
                            <span class="badge badge-info">@Model.Status.GetDisplayName()</span>
                            break;
                        case StudentCourseStatus.Withdrawn:
                            <span class="badge badge-danger">@Model.Status.GetDisplayName()</span>
                            break;
                        case StudentCourseStatus.Late:
                            <span class="badge badge-warning">@Model.Status.GetDisplayName()</span>
                            break;
                        case StudentCourseStatus.Suspended:
                            <span class="badge badge-secondary">@Model.Status.GetDisplayName()</span>
                            break;
                    }
                </div>
            </div>
        </div>

        <form asp-action="Delete" method="post" class="delete-form">
            <input type="hidden" asp-for="StudentCourseId" />
            
            <div class="form-actions">
                <button type="submit" class="btn btn-danger" onclick="return confirm('هل أنت متأكد من حذف هذا التسجيل؟')">
                    <i class="fas fa-trash"></i> تأكيد الحذف
                </button>
                <a href="@Url.Action("Index")" class="btn btn-outline">
                    <i class="fas fa-times"></i> إلغاء
                </a>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <style>
        .details-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        
        .detail-item {
            padding: 15px;
            background: var(--light-bg);
            border-radius: 8px;
            border-right: 3px solid var(--primary-light);
        }
        
        .detail-label {
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: 600;
            color: var(--primary-dark);
            margin-bottom: 8px;
            font-size: 0.9rem;
        }
        
        .detail-label i {
            color: var(--primary-color);
            width: 20px;
        }
        
        .detail-value {
            font-size: 1.05rem;
            color: var(--dark-text);
            padding-right: 30px;
        }
        
        .badge {
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 0.85rem;
            font-weight: 600;
        }
        
        .badge-success {
            background: rgba(67, 160, 71, 0.15);
            color: var(--success-color);
        }
        
        .badge-danger {
            background: rgba(229, 57, 53, 0.15);
            color: var(--danger-color);
        }
        
        .badge-info {
            background: rgba(33, 150, 243, 0.15);
            color: #1976d2;
        }
        
        .badge-warning {
            background: rgba(255, 152, 0, 0.15);
            color: #f57c00;
        }
        
        .badge-secondary {
            background: rgba(158, 158, 158, 0.15);
            color: #616161;
        }
        
        .form-actions {
            display: flex;
            gap: 10px;
            margin-top: 20px;
            padding-top: 20px;
            border-top: 1px solid var(--border-color);
        }
        
        .alert {
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .alert-warning {
            background-color: #fff3e0;
            color: #ef6c00;
            border: 1px solid #ff9800;
        }
        
        .delete-form {
            margin-top: 20px;
        }
    </style>
}

