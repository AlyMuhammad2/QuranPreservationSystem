@model IEnumerable<QuranPreservationSystem.Application.DTOs.EnrollmentDto>
@{
    ViewData["Title"] = "التسجيلات";
    Layout = "_DashboardLayout";
    var centers = ViewBag.Centers as IEnumerable<QuranPreservationSystem.Domain.Entities.Center>;
    var currentSearch = ViewBag.CurrentSearch as string;
    var currentCenterId = ViewBag.CurrentCenterId as int?;
}

<!-- Page Header -->
<div class="page-header">
    <div class="page-title">
        <i class="fas fa-user-check"></i>
        <h2>إدارة التسجيلات</h2>
    </div>
    <div class="page-actions">
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-plus"></i> تسجيل طالب جديد
        </a>
    </div>
</div>

<!-- Search and Filter Section -->
<div class="card" style="margin-bottom: 20px;">
    <div class="card-body" style="padding: 20px;">
        <form method="get" asp-action="Index" class="search-filter-form">
            <div class="filter-grid">
                <div class="search-box">
                    <label for="searchTerm" class="filter-label">
                        <i class="fas fa-search"></i> البحث باسم الطالب أو الدورة
                    </label>
                    <input type="text" 
                           id="searchTerm" 
                           name="searchTerm" 
                           class="form-control" 
                           placeholder="ابحث باسم الطالب أو الدورة..." 
                           value="@currentSearch" />
                </div>

                <div class="filter-box">
                    <label for="centerId" class="filter-label">
                        <i class="fas fa-mosque"></i> المركز
                    </label>
                    <select id="centerId" name="centerId" class="form-control">
                        <option value="">جميع المراكز</option>
                        @if (centers != null)
                        {
                            foreach (var center in centers)
                            {
                                <option value="@center.CenterId" selected="@(currentCenterId == center.CenterId)">
                                    @center.Name
                                </option>
                            }
                        }
                    </select>
                </div>

                <div class="filter-actions">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-filter"></i> تطبيق
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-outline">
                        <i class="fas fa-redo"></i> إعادة تعيين
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Stats Summary -->
<div class="stats-container" style="margin-bottom: 25px;">
    <div class="stat-card stat-success">
        <div class="stat-icon">
            <i class="fas fa-user-check"></i>
        </div>
        <div class="stat-info">
            <h3>@Model.Count()</h3>
            <p>إجمالي التسجيلات</p>
        </div>
    </div>
    
    <div class="stat-card stat-info">
        <div class="stat-icon">
            <i class="fas fa-check-circle"></i>
        </div>
        <div class="stat-info">
            <h3>@Model.Count(e => e.Status == StudentCourseStatus.Active)</h3>
            <p>تسجيلات نشطة</p>
        </div>
    </div>
    
    <div class="stat-card stat-warning">
        <div class="stat-icon">
            <i class="fas fa-graduation-cap"></i>
        </div>
        <div class="stat-info">
            <h3>@Model.Count(e => e.Status == StudentCourseStatus.Completed)</h3>
            <p>تسجيلات مكتملة</p>
        </div>
    </div>
    
    <div class="stat-card stat-danger">
        <div class="stat-icon">
            <i class="fas fa-calendar-check"></i>
        </div>
        <div class="stat-info">
            <h3>@Model.Count(e => e.ExamDate.HasValue)</h3>
            <p>اختبارات مجدولة</p>
        </div>
    </div>
</div>

<!-- Enrollments Table -->
<div class="card">
    <div class="card-header">
        <i class="fas fa-list"></i>
        <span>قائمة التسجيلات</span>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>اسم الطالب</th>
                            <th>الدورة</th>
                            <th>المدرس</th>
                            <th>المركز</th>
                            <th>تاريخ التسجيل</th>
                            <th>الحالة</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = 1;
                        }
                        @foreach (var enrollment in Model)
                        {
                            <tr>
                                <td>@index</td>
                                <td><strong>@enrollment.StudentName</strong></td>
                                <td>@enrollment.CourseName</td>
                                <td>@enrollment.TeacherName</td>
                                <td>@enrollment.CenterName</td>
                                <td>@enrollment.EnrollmentDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @switch (enrollment.Status)
                                    {
                                        case StudentCourseStatus.Active:
                                            <span class="badge badge-success">@enrollment.Status.GetDisplayName()</span>
                                            break;
                                        case StudentCourseStatus.Completed:
                                            <span class="badge badge-info">@enrollment.Status.GetDisplayName()</span>
                                            break;
                                        case StudentCourseStatus.Withdrawn:
                                            <span class="badge badge-danger">@enrollment.Status.GetDisplayName()</span>
                                            break;
                                        case StudentCourseStatus.Late:
                                            <span class="badge badge-warning">@enrollment.Status.GetDisplayName()</span>
                                            break;
                                        case StudentCourseStatus.Suspended:
                                            <span class="badge badge-secondary">@enrollment.Status.GetDisplayName()</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="@Url.Action("Details", new { id = enrollment.StudentCourseId })" class="btn-icon btn-info" title="التفاصيل">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", new { id = enrollment.StudentCourseId })" class="btn-icon btn-warning" title="تعديل">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = enrollment.StudentCourseId })" class="btn-icon btn-danger" title="حذف">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            index++;
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-user-check"></i>
                <h3>لا توجد تسجيلات</h3>
                <p>ابدأ بتسجيل الطلاب في الدورات</p>
                <a href="@Url.Action("Create")" class="btn btn-primary">
                    <i class="fas fa-plus"></i> تسجيل طالب
                </a>
            </div>
        }
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/dashboard.css" />
    
    <style>
        .filter-grid {
            display: grid;
            grid-template-columns: 1fr 1fr auto;
            gap: 20px;
            align-items: end;
        }
        
        .search-box, .filter-box {
            display: flex;
            flex-direction: column;
        }
        
        .filter-label {
            font-weight: 600;
            color: var(--primary-dark);
            margin-bottom: 8px;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .filter-label i {
            color: var(--primary-color);
        }
        
        .filter-actions {
            display: flex;
            gap: 10px;
        }
        
        .search-filter-form .form-control {
            padding: 10px 15px;
            border: 1px solid var(--border-color);
            border-radius: 8px;
            font-size: 0.95rem;
            transition: all 0.3s ease;
        }
        
        .search-filter-form .form-control:focus {
            border-color: var(--primary-light);
            outline: none;
            box-shadow: 0 0 0 3px rgba(76, 175, 80, 0.15);
        }
        
        .badge-secondary {
            background: rgba(158, 158, 158, 0.15);
            color: #616161;
        }
        
        @@media (max-width: 992px) {
            .filter-grid {
                grid-template-columns: 1fr;
            }
            
            .filter-actions {
                width: 100%;
            }
            
            .filter-actions .btn {
                flex: 1;
            }
        }
    </style>
}

