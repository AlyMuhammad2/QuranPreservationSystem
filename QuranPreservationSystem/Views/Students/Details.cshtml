@model QuranPreservationSystem.Application.DTOs.StudentDto
@{
    ViewData["Title"] = "تفاصيل الطالب";
    Layout = "_DashboardLayout";
}

<!-- Page Header -->
<div class="page-header">
    <div class="page-title">
        <i class="fas fa-user-graduate"></i>
        <h2>تفاصيل الطالب</h2>
    </div>
    <div class="page-actions">
        <a href="@Url.Action("Edit", new { id = Model.StudentId })" class="btn btn-warning">
            <i class="fas fa-edit"></i> تعديل
        </a>
        <a href="@Url.Action("Index")" class="btn btn-outline">
            <i class="fas fa-arrow-right"></i> العودة للقائمة
        </a>
    </div>
</div>

<!-- Student Info Card -->
<div class="card">
    <div class="card-header">
        <i class="fas fa-user"></i>
        <span>البيانات الشخصية</span>
    </div>
    <div class="card-body">
        <div class="details-grid">
            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-user"></i>
                    <span>الاسم الكامل</span>
                </div>
                <div class="detail-value"><strong>@Model.FullName</strong></div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-phone"></i>
                    <span>رقم الهاتف</span>
                </div>
                <div class="detail-value">@Model.PhoneNumber</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-envelope"></i>
                    <span>البريد الإلكتروني</span>
                </div>
                <div class="detail-value">@(Model.Email ?? "-")</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-map-marker-alt"></i>
                    <span>العنوان</span>
                </div>
                <div class="detail-value">@(Model.Address ?? "-")</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-birthday-cake"></i>
                    <span>تاريخ الميلاد</span>
                </div>
                <div class="detail-value">
                    @if (Model.DateOfBirth.HasValue)
                    {
                        @Model.DateOfBirth.Value.ToString("dd/MM/yyyy")
                    }
                    else
                    {
                        <text>-</text>
                    }
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-venus-mars"></i>
                    <span>الجنس</span>
                </div>
                <div class="detail-value">
                    @(Model.Gender == Gender.Male ? "ذكر" : "أنثى")
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-mosque"></i>
                    <span>المركز</span>
                </div>
                <div class="detail-value">@(Model.CenterName ?? "-")</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-calendar"></i>
                    <span>تاريخ التسجيل</span>
                </div>
                <div class="detail-value">@Model.CreatedDate.ToString("dd/MM/yyyy")</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-toggle-on"></i>
                    <span>الحالة</span>
                </div>
                <div class="detail-value">
                    @if (Model.IsActive)
                    {
                        <span class="badge badge-success">نشط</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">غير نشط</span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Additional Info Card -->
<div class="card">
    <div class="card-header">
        <i class="fas fa-info-circle"></i>
        <span>معلومات إضافية</span>
    </div>
    <div class="card-body">
        <div class="details-grid">
            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-id-card"></i>
                    <span>رقم الهوية</span>
                </div>
                <div class="detail-value">@(Model.IdentityNumber ?? "-")</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-book"></i>
                    <span>عدد الدورات</span>
                </div>
                <div class="detail-value"><strong>@(Model.StudentCourses?.Count ?? 0)</strong></div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-check-circle"></i>
                    <span>دورات مكتملة</span>
                </div>
                <div class="detail-value">
                    <strong>@(Model.StudentCourses?.Count(sc => sc.Status == StudentCourseStatus.Completed) ?? 0)</strong>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Notes))
        {
            <div class="detail-item full-width" style="margin-top: 20px;">
                <div class="detail-label">
                    <i class="fas fa-sticky-note"></i>
                    <span>ملاحظات</span>
                </div>
                <div class="detail-value">@Model.Notes</div>
            </div>
        }
    </div>
</div>

<!-- Student Courses Card -->
@if (Model.StudentCourses != null && Model.StudentCourses.Any())
{
    <div class="card">
        <div class="card-header">
            <i class="fas fa-book-open"></i>
            <span>دورات الطالب</span>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>اسم الدورة</th>
                            <th>المدرس</th>
                            <th>تاريخ التسجيل</th>
                            <th>تاريخ الاختبار</th>
                            <th>الحالة</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = 1;
                        }
                        @foreach (var course in Model.StudentCourses)
                        {
                            <tr>
                                <td>@index</td>
                                <td><strong>@course.CourseName</strong></td>
                                <td>@(course.TeacherName ?? "-")</td>
                                <td>@course.RegistrationDate.ToString("dd/MM/yyyy")</td>
                                <td>@(course.ExamDate?.ToString("dd/MM/yyyy") ?? "-")</td>
                                <td>
                                    @switch (course.Status)
                                    {
                                        case StudentCourseStatus.Active:
                                            <span class="badge badge-success">نشط</span>
                                            break;
                                        case StudentCourseStatus.Completed:
                                            <span class="badge badge-info">مكتمل</span>
                                            break;
                                        case StudentCourseStatus.Withdrawn:
                                            <span class="badge badge-danger">منسحب</span>
                                            break;
                                        case StudentCourseStatus.Late:
                                            <span class="badge badge-warning">متأخر</span>
                                            break;
                                        case StudentCourseStatus.Suspended:
                                            <span class="badge badge-secondary">معلق</span>
                                            break;
                                    }
                                </td>
                            </tr>
                            index++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@section Styles {
    <style>
        .details-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
        }
        
        .detail-item {
            padding: 15px;
            background: var(--light-bg);
            border-radius: 8px;
            border-right: 3px solid var(--primary-light);
        }
        
        .detail-item.full-width {
            grid-column: 1 / -1;
        }
        
        .detail-label {
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: 600;
            color: var(--primary-dark);
            margin-bottom: 8px;
            font-size: 0.9rem;
        }
        
        .detail-label i {
            color: var(--primary-color);
            width: 20px;
        }
        
        .detail-value {
            font-size: 1.05rem;
            color: var(--dark-text);
            padding-right: 30px;
        }
        
        .badge {
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 0.85rem;
            font-weight: 600;
        }
        
        .badge-success {
            background: rgba(67, 160, 71, 0.15);
            color: var(--success-color);
        }
        
        .badge-danger {
            background: rgba(229, 57, 53, 0.15);
            color: var(--danger-color);
        }
        
        .badge-info {
            background: rgba(33, 150, 243, 0.15);
            color: #1976d2;
        }
        
        .badge-warning {
            background: rgba(255, 152, 0, 0.15);
            color: #f57c00;
        }
        
        .badge-secondary {
            background: rgba(158, 158, 158, 0.15);
            color: #616161;
        }
    </style>
}
