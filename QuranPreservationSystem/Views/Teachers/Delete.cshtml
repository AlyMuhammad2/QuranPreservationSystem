@model QuranPreservationSystem.Application.DTOs.TeacherDto
@{
    ViewData["Title"] = "حذف مدرس";
    Layout = "_DashboardLayout";
}

<!-- Page Header -->
<div class="page-header">
    <div class="page-title">
        <i class="fas fa-trash"></i>
        <h2>حذف مدرس</h2>
    </div>
    <div class="page-actions">
        <a href="@Url.Action("Index")" class="btn btn-outline">
            <i class="fas fa-arrow-right"></i> العودة للقائمة
        </a>
    </div>
</div>

<!-- Delete Confirmation -->
<div class="card">
    <div class="card-header" style="background: linear-gradient(135deg, #e53935 0%, #c62828 100%);">
        <i class="fas fa-exclamation-triangle"></i>
        <span>تأكيد الحذف</span>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle"></i>
            <strong>تحذير:</strong> هل أنت متأكد من حذف هذا المدرس؟ هذا الإجراء لا يمكن التراجع عنه.
        </div>

        <div class="details-grid">
            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-user"></i>
                    <span>الاسم الكامل</span>
                </div>
                <div class="detail-value"><strong>@Model.FullName</strong></div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-phone"></i>
                    <span>رقم الهاتف</span>
                </div>
                <div class="detail-value">@Model.PhoneNumber</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-envelope"></i>
                    <span>البريد الإلكتروني</span>
                </div>
                <div class="detail-value">@(Model.Email ?? "-")</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-mosque"></i>
                    <span>المركز</span>
                </div>
                <div class="detail-value">@Model.CenterName</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-book-reader"></i>
                    <span>التخصص</span>
                </div>
                <div class="detail-value">@(Model.Specialization ?? "-")</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-calendar"></i>
                    <span>تاريخ التعيين</span>
                </div>
                <div class="detail-value">@Model.HireDate.ToString("dd/MM/yyyy")</div>
            </div>
        </div>

        <form asp-action="Delete" method="post" class="delete-form">
            <input type="hidden" asp-for="TeacherId" />
            
            <div class="form-actions">
                <button type="submit" class="btn btn-danger" onclick="return confirm('هل أنت متأكد من حذف هذا المدرس؟')">
                    <i class="fas fa-trash"></i> تأكيد الحذف
                </button>
                <a href="@Url.Action("Index")" class="btn btn-outline">
                    <i class="fas fa-times"></i> إلغاء
                </a>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <style>
        .details-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        
        .detail-item {
            padding: 15px;
            background: var(--light-bg);
            border-radius: 8px;
            border-right: 3px solid var(--primary-light);
        }
        
        .detail-label {
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: 600;
            color: var(--primary-dark);
            margin-bottom: 8px;
            font-size: 0.9rem;
        }
        
        .detail-label i {
            color: var(--primary-color);
            width: 20px;
        }
        
        .detail-value {
            font-size: 1.05rem;
            color: var(--dark-text);
            padding-right: 30px;
        }
        
        .form-actions {
            display: flex;
            gap: 10px;
            margin-top: 20px;
            padding-top: 20px;
            border-top: 1px solid var(--border-color);
        }
        
        .alert {
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .alert-warning {
            background-color: #fff3e0;
            color: #ef6c00;
            border: 1px solid #ff9800;
        }
        
        .delete-form {
            margin-top: 20px;
        }
    </style>
}

