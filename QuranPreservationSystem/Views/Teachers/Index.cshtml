@model IEnumerable<QuranPreservationSystem.Application.DTOs.TeacherDto>
@{
    ViewData["Title"] = "المدرسين";
    Layout = "_DashboardLayout";
}

<!-- Page Header -->
<div class="page-header">
    <div class="page-title">
        <i class="fas fa-chalkboard-teacher"></i>
        <h2>إدارة المدرسين</h2>
    </div>
    <div class="page-actions">
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-user-plus"></i> إضافة مدرس جديد
        </a>
    </div>
</div>

<!-- Stats Summary -->
<div class="stats-container" style="margin-bottom: 25px;">
    <div class="stat-card stat-success">
        <div class="stat-icon">
            <i class="fas fa-chalkboard-teacher"></i>
        </div>
        <div class="stat-info">
            <h3>@Model.Count()</h3>
            <p>إجمالي المدرسين</p>
        </div>
    </div>
    
    <div class="stat-card stat-info">
        <div class="stat-icon">
            <i class="fas fa-user-check"></i>
        </div>
        <div class="stat-info">
            <h3>@Model.Count(t => t.IsActive)</h3>
            <p>المدرسين النشطين</p>
        </div>
    </div>
</div>

<!-- Teachers Table -->
<div class="card">
    <div class="card-header">
        <i class="fas fa-list"></i>
        <span>قائمة المدرسين</span>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>الاسم الكامل</th>
                            <th>رقم الهاتف</th>
                            <th>البريد الإلكتروني</th>
                            <th>التخصص</th>
                            <th>المركز</th>
                            <th>الحالة</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = 1;
                        }
                        @foreach (var teacher in Model)
                        {
                            <tr>
                                <td>@index</td>
                                <td><strong>@teacher.FullName</strong></td>
                                <td>@teacher.PhoneNumber</td>
                                <td>@(teacher.Email ?? "-")</td>
                                <td>@(teacher.Specialization ?? "-")</td>
                                <td>@(teacher.CenterName ?? "-")</td>
                                <td>
                                    @if (teacher.IsActive)
                                    {
                                        <span class="badge badge-success">نشط</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">غير نشط</span>
                                    }
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="@Url.Action("Details", new { id = teacher.TeacherId })" class="btn-icon btn-info" title="التفاصيل">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", new { id = teacher.TeacherId })" class="btn-icon btn-warning" title="تعديل">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = teacher.TeacherId })" class="btn-icon btn-danger" title="حذف">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            index++;
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-chalkboard-teacher"></i>
                <h3>لا يوجد مدرسين</h3>
                <p>ابدأ بإضافة مدرس جديد</p>
                <a href="@Url.Action("Create")" class="btn btn-primary">
                    <i class="fas fa-user-plus"></i> إضافة مدرس
                </a>
            </div>
        }
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/dashboard.css" />
}

