@model QuranPreservationSystem.Application.DTOs.HafizRegistryDto
@{
    ViewData["Title"] = "تفاصيل الحافظ";
    Layout = "_DashboardLayout";
}

<!-- Page Header -->
<div class="page-header">
    <div class="page-title">
        <i class="fas fa-book-quran"></i>
        <h2>تفاصيل الحافظ</h2>
    </div>
    <div class="page-actions">
        <a href="@Url.Action("Edit", new { id = Model.HafizId })" class="btn btn-warning">
            <i class="fas fa-edit"></i> تعديل
        </a>
        <a href="@Url.Action("Index")" class="btn btn-outline">
            <i class="fas fa-arrow-right"></i> العودة للقائمة
        </a>
    </div>
</div>

<!-- Hafiz Info Card -->
<div class="card">
    <div class="card-header">
        <i class="fas fa-user"></i>
        <span>البيانات الأساسية</span>
    </div>
    <div class="card-body">
        <div class="details-grid">
            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-user"></i>
                    <span>اسم الطالب</span>
                </div>
                <div class="detail-value"><strong>@Model.StudentName</strong></div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-mosque"></i>
                    <span>المركز</span>
                </div>
                <div class="detail-value">@(Model.CenterName ?? "-")</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-calendar"></i>
                    <span>سنة الإتمام</span>
                </div>
                <div class="detail-value"><strong>@Model.CompletionYear</strong></div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-layer-group"></i>
                    <span>مستوى الحفظ</span>
                </div>
                <div class="detail-value">
                    @if (Model.MemorizationLevel.HasValue)
                    {
                        <span class="badge badge-info">@Model.MemorizationLevel.Value.GetDisplayName()</span>
                    }
                    else
                    {
                        <text>-</text>
                    }
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-calendar-check"></i>
                    <span>تاريخ الإضافة</span>
                </div>
                <div class="detail-value">@Model.CreatedDate.ToString("dd/MM/yyyy")</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-toggle-on"></i>
                    <span>الحالة</span>
                </div>
                <div class="detail-value">
                    @if (Model.IsActive)
                    {
                        <span class="badge badge-success">نشط</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">غير نشط</span>
                    }
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.CompletedCourses))
        {
            <div class="detail-item full-width" style="margin-top: 20px;">
                <div class="detail-label">
                    <i class="fas fa-book"></i>
                    <span>الدورات المكتملة</span>
                </div>
                <div class="detail-value">@Model.CompletedCourses</div>
            </div>
        }
    </div>
</div>

<!-- Certificate & Photo Card -->
@if (!string.IsNullOrEmpty(Model.CertificateFileName) || !string.IsNullOrEmpty(Model.PhotoPath))
{
    <div class="card">
        <div class="card-header">
            <i class="fas fa-file-pdf"></i>
            <span>المرفقات</span>
        </div>
        <div class="card-body">
            <div class="details-grid">
                @if (!string.IsNullOrEmpty(Model.CertificateFileName))
                {
                    <div class="detail-item">
                        <div class="detail-label">
                            <i class="fas fa-file-pdf"></i>
                            <span>الشهادة</span>
                        </div>
                        <div class="detail-value">
                            <div class="file-download-section">
                                <div class="file-info">
                                    <strong>@Model.CertificateFileName</strong>
                                    @if (!string.IsNullOrEmpty(Model.FileSizeFormatted))
                                    {
                                        <small class="text-muted">(@Model.FileSizeFormatted)</small>
                                    }
                                </div>
                                <a href="@Url.Action("Download", new { id = Model.HafizId })" class="btn btn-sm btn-primary">
                                    <i class="fas fa-download"></i> تحميل
                                </a>
                            </div>
                        </div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.PhotoPath))
                {
                    <div class="detail-item">
                        <div class="detail-label">
                            <i class="fas fa-image"></i>
                            <span>صورة الحافظ</span>
                        </div>
                        <div class="detail-value">
                            <span class="badge badge-success">
                                <i class="fas fa-check"></i> متوفرة
                            </span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

@section Styles {
    <style>
        .details-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
        }
        
        .detail-item {
            padding: 15px;
            background: var(--light-bg);
            border-radius: 8px;
            border-right: 3px solid var(--primary-light);
        }
        
        .detail-item.full-width {
            grid-column: 1 / -1;
        }
        
        .detail-label {
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: 600;
            color: var(--primary-dark);
            margin-bottom: 8px;
            font-size: 0.9rem;
        }
        
        .detail-label i {
            color: var(--primary-color);
            width: 20px;
        }
        
        .detail-value {
            font-size: 1.05rem;
            color: var(--dark-text);
            padding-right: 30px;
        }

        .file-download-section {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 15px;
            padding: 12px;
            background: #f5f5f5;
            border-radius: 6px;
        }

        .file-info {
            flex: 1;
        }

        .file-info strong {
            display: block;
            margin-bottom: 5px;
        }

        .text-muted {
            color: #6c757d;
            font-size: 0.85rem;
        }
        
        .badge {
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 0.85rem;
            font-weight: 600;
        }
        
        .badge-success {
            background: rgba(67, 160, 71, 0.15);
            color: var(--success-color);
        }
        
        .badge-danger {
            background: rgba(229, 57, 53, 0.15);
            color: var(--danger-color);
        }
        
        .badge-info {
            background: rgba(33, 150, 243, 0.15);
            color: #1976d2;
        }

        .btn-sm {
            padding: 6px 12px;
            font-size: 0.875rem;
        }
    </style>
}
