@model QuranPreservationSystem.Application.DTOs.HafizRegistryDto
@{
    ViewData["Title"] = "حذف من ديوان الحفاظ";
    Layout = "_DashboardLayout";
}

<div class="page-header">
    <div class="page-title">
        <i class="fas fa-trash"></i>
        <h2>حذف من ديوان الحفاظ</h2>
    </div>
    <div class="page-actions">
        <a href="@Url.Action("Index")" class="btn btn-outline">
            <i class="fas fa-arrow-right"></i> العودة
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header" style="background: linear-gradient(135deg, #e53935 0%, #c62828 100%);">
        <i class="fas fa-exclamation-triangle"></i>
        <span>تأكيد الحذف</span>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle"></i>
            <strong>تحذير:</strong> هل أنت متأكد من حذف هذا الحافظ؟ لا يمكن التراجع عن هذا الإجراء.
        </div>

        <div class="details-grid">
            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-user"></i>
                    <span>اسم الطالب</span>
                </div>
                <div class="detail-value"><strong>@Model.StudentName</strong></div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-mosque"></i>
                    <span>المركز</span>
                </div>
                <div class="detail-value">@Model.CenterName</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-calendar"></i>
                    <span>سنة الإتمام</span>
                </div>
                <div class="detail-value">@Model.CompletionYear</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-layer-group"></i>
                    <span>مستوى الحفظ</span>
                </div>
                <div class="detail-value">
                    @if (Model.MemorizationLevel.HasValue)
                    {
                        @Model.MemorizationLevel.Value.GetDisplayName()
                    }
                    else
                    {
                        <text>-</text>
                    }
                </div>
            </div>
        </div>

        <form asp-action="Delete" method="post" class="delete-form">
            <input type="hidden" asp-for="HafizId" />
            
            <div class="form-actions">
                <button type="submit" class="btn btn-danger" onclick="return confirm('هل أنت متأكد من الحذف؟')">
                    <i class="fas fa-trash"></i> تأكيد الحذف
                </button>
                <a href="@Url.Action("Index")" class="btn btn-outline">
                    <i class="fas fa-times"></i> إلغاء
                </a>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/dashboard.css" />
}

