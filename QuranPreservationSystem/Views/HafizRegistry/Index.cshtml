@model IEnumerable<QuranPreservationSystem.Application.DTOs.HafizRegistryDto>
@{
    ViewData["Title"] = "ديوان الحفاظ";
    Layout = "_DashboardLayout";
    var centers = ViewBag.Centers as IEnumerable<QuranPreservationSystem.Domain.Entities.Center>;
    var currentSearch = ViewBag.CurrentSearch as string;
    var currentCenterId = ViewBag.CurrentCenterId as int?;
    var currentPage = (int)ViewBag.CurrentPage;
    var totalPages = (int)ViewBag.TotalPages;
    var totalCount = (int)ViewBag.TotalCount;
}

<!-- Page Header -->
<div class="page-header">
    <div class="page-title">
        <i class="fas fa-book-quran"></i>
        <h2>إدارة ديوان الحفاظ</h2>
    </div>
    <div class="page-actions">
        <a href="@Url.Action("ExportToExcel", new { searchTerm = currentSearch, centerId = currentCenterId })" class="btn btn-success">
            <i class="fas fa-file-excel"></i> تصدير Excel
        </a>
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-user-plus"></i> إضافة حافظ جديد
        </a>
    </div>
</div>

<!-- Search and Filter Section -->
<div class="card" style="margin-bottom: 20px;">
    <div class="card-body" style="padding: 20px;">
        <form method="get" asp-action="Index" class="search-filter-form">
            <div class="filter-grid">
                <div class="search-box">
                    <label for="searchTerm" class="filter-label">
                        <i class="fas fa-search"></i> البحث بالاسم
                    </label>
                    <input type="text" 
                           id="searchTerm" 
                           name="searchTerm" 
                           class="form-control" 
                           placeholder="ابحث باسم الطالب..." 
                           value="@currentSearch" />
                </div>

                <div class="filter-box">
                    <label for="centerId" class="filter-label">
                        <i class="fas fa-mosque"></i> المركز
                    </label>
                    <select id="centerId" name="centerId" class="form-control">
                        <option value="">جميع المراكز</option>
                        @if (centers != null)
                        {
                            foreach (var center in centers)
                            {
                                <option value="@center.CenterId" selected="@(currentCenterId == center.CenterId)">
                                    @center.Name
                                </option>
                            }
                        }
                    </select>
                </div>

                <div class="filter-actions">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-filter"></i> تطبيق
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-outline">
                        <i class="fas fa-redo"></i> إعادة تعيين
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Stats Summary -->
<div class="stats-container" style="margin-bottom: 25px;">
    <div class="stat-card stat-success">
        <div class="stat-icon">
            <i class="fas fa-book-quran"></i>
        </div>
        <div class="stat-info">
            <h3>@totalCount</h3>
            <p>إجمالي الحفاظ</p>
        </div>
    </div>
    
    <div class="stat-card stat-info">
        <div class="stat-icon">
            <i class="fas fa-user-check"></i>
        </div>
        <div class="stat-info">
            <h3>@Model.Count(h => h.IsActive)</h3>
            <p>الحفاظ النشطين</p>
        </div>
    </div>
    
    <div class="stat-card stat-warning">
        <div class="stat-icon">
            <i class="fas fa-certificate"></i>
        </div>
        <div class="stat-info">
            <h3>@Model.Count(h => !string.IsNullOrEmpty(h.CertificateFileName))</h3>
            <p>لديهم شهادات</p>
        </div>
    </div>
    
    <div class="stat-card stat-danger">
        <div class="stat-icon">
            <i class="fas fa-calendar"></i>
        </div>
        <div class="stat-info">
            <h3>@DateTime.Now.Year</h3>
            <p>العام الحالي</p>
        </div>
    </div>
</div>

<!-- Hafiz Table -->
<div class="card">
    <div class="card-header">
        <i class="fas fa-list"></i>
        <span>قائمة الحفاظ</span>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>اسم الطالب</th>
                            <th>المركز</th>
                            <th>سنة الإتمام</th>
                            <th>مستوى الحفظ</th>
                            <th>الشهادة</th>
                            <th>الحالة</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = ((currentPage - 1) * 10) + 1;
                        }
                        @foreach (var hafiz in Model)
                        {
                            <tr>
                                <td>@index</td>
                                <td><strong>@hafiz.StudentName</strong></td>
                                <td>@(hafiz.CenterName ?? "-")</td>
                                <td>@hafiz.CompletionYear</td>
                                <td>
                                    @if (hafiz.MemorizationLevel.HasValue)
                                    {
                                        <span class="badge badge-info">@hafiz.MemorizationLevel.Value.GetDisplayName()</span>
                                    }
                                    else
                                    {
                                        <text>-</text>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(hafiz.CertificateFileName))
                                    {
                                        <a href="@Url.Action("Download", new { id = hafiz.HafizId })" class="btn-icon btn-primary" title="تحميل الشهادة">
                                            <i class="fas fa-download"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (hafiz.IsActive)
                                    {
                                        <span class="badge badge-success">نشط</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">غير نشط</span>
                                    }
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="@Url.Action("Details", new { id = hafiz.HafizId })" class="btn-icon btn-info" title="التفاصيل">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", new { id = hafiz.HafizId })" class="btn-icon btn-warning" title="تعديل">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = hafiz.HafizId })" class="btn-icon btn-danger" title="حذف">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            index++;
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (totalPages > 1)
            {
                <div class="pagination-container">
                    <nav>
                        <ul class="pagination">
                            @if (currentPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { searchTerm = currentSearch, centerId = currentCenterId, pageNumber = currentPage - 1 })">
                                        <i class="fas fa-chevron-right"></i> السابق
                                    </a>
                                </li>
                            }

                            @for (int i = 1; i <= totalPages; i++)
                            {
                                <li class="page-item @(i == currentPage ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { searchTerm = currentSearch, centerId = currentCenterId, pageNumber = i })">
                                        @i
                                    </a>
                                </li>
                            }

                            @if (currentPage < totalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { searchTerm = currentSearch, centerId = currentCenterId, pageNumber = currentPage + 1 })">
                                        التالي <i class="fas fa-chevron-left"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            }
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-book-quran"></i>
                <h3>لا يوجد حفاظ</h3>
                <p>ابدأ بإضافة حافظ جديد في ديوان الحفاظ</p>
                <a href="@Url.Action("Create")" class="btn btn-primary">
                    <i class="fas fa-plus"></i> إضافة حافظ
                </a>
            </div>
        }
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/dashboard.css" />
    <style>
        .filter-grid {
            display: grid;
            grid-template-columns: 1fr 1fr auto;
            gap: 20px;
            align-items: end;
        }
        
        .search-box, .filter-box {
            display: flex;
            flex-direction: column;
        }
        
        .filter-label {
            font-weight: 600;
            color: var(--primary-dark);
            margin-bottom: 8px;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .filter-label i {
            color: var(--primary-color);
        }
        
        .filter-actions {
            display: flex;
            gap: 10px;
        }
        
        .search-filter-form .form-control {
            padding: 10px 15px;
            border: 1px solid var(--border-color);
            border-radius: 8px;
            font-size: 0.95rem;
            transition: all 0.3s ease;
        }
        
        .search-filter-form .form-control:focus {
            border-color: var(--primary-light);
            outline: none;
            box-shadow: 0 0 0 3px rgba(76, 175, 80, 0.15);
        }
        
        .pagination-container {
            margin-top: 20px;
            display: flex;
            justify-content: center;
        }
        
        .pagination {
            display: flex;
            list-style: none;
            padding: 0;
            margin: 0;
            gap: 5px;
        }
        
        .page-item .page-link {
            padding: 8px 12px;
            border: 1px solid var(--border-color);
            border-radius: 6px;
            color: var(--primary-color);
            text-decoration: none;
            transition: all 0.3s ease;
        }
        
        .page-item.active .page-link {
            background: var(--primary-color);
            color: white;
            border-color: var(--primary-color);
        }
        
        .page-item .page-link:hover {
            background: var(--primary-light);
            color: white;
            border-color: var(--primary-light);
        }
        
        @@media (max-width: 992px) {
            .filter-grid {
                grid-template-columns: 1fr;
            }
            
            .filter-actions {
                width: 100%;
            }
            
            .filter-actions .btn {
                flex: 1;
            }
        }
    </style>
}
