@model QuranPreservationSystem.Application.DTOs.UpdateHafizRegistryDto
@{
    ViewData["Title"] = "تعديل بيانات الحافظ";
    Layout = "_DashboardLayout";
    var centers = ViewBag.Centers as IEnumerable<QuranPreservationSystem.Domain.Entities.Center>;
    var courses = ViewBag.Courses as IEnumerable<QuranPreservationSystem.Domain.Entities.Course>;
}

<!-- Page Header -->
<div class="page-header">
    <div class="page-title">
        <i class="fas fa-edit"></i>
        <h2>تعديل بيانات الحافظ</h2>
    </div>
    <div class="page-actions">
        <a href="@Url.Action("Index")" class="btn btn-outline">
            <i class="fas fa-arrow-right"></i> العودة للقائمة
        </a>
    </div>
</div>

<!-- Edit Form -->
<div class="card">
    <div class="card-header">
        <i class="fas fa-edit"></i>
        <span>تعديل البيانات</span>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="HafizId" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            
            <h4 class="section-title"><i class="fas fa-user"></i> البيانات الأساسية</h4>
            <div class="form-grid">
                <div class="form-group">
                    <label asp-for="StudentName" class="form-label"></label>
                    <input asp-for="StudentName" class="form-control" placeholder="أدخل اسم الطالب" />
                    <span asp-validation-for="StudentName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CenterId" class="form-label"></label>
                    <select asp-for="CenterId" class="form-control">
                        <option value="">اختر المركز (اختياري)</option>
                        @if (centers != null)
                        {
                            foreach (var center in centers)
                            {
                                <option value="@center.CenterId">@center.Name</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="CenterId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CompletionYear" class="form-label"></label>
                    <input asp-for="CompletionYear" type="number" min="1900" max="2100" class="form-control" placeholder="أدخل سنة الإتمام" />
                    <span asp-validation-for="CompletionYear" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MemorizationLevel" class="form-label"></label>
                    <select asp-for="MemorizationLevel" class="form-control" asp-items="Html.GetEnumSelectList<QuranPreservationSystem.Domain.Enums.MemorizationLevel>()">
                        <option value="">اختر مستوى الحفظ (اختياري)</option>
                    </select>
                    <span asp-validation-for="MemorizationLevel" class="text-danger"></span>
                </div>
            </div>

            <h4 class="section-title"><i class="fas fa-book"></i> الدورات</h4>
            <div class="form-group">
                <label class="form-label">الدورات المكتملة (اختياري)</label>
                <select id="coursesSelect" class="form-control" multiple size="6">
                    @if (courses != null)
                    {
                        foreach (var course in courses)
                        {
                            <option value="@course.CourseId">@course.CourseName</option>
                        }
                    }
                </select>
                <small class="form-text text-muted">اضغط Ctrl لاختيار أكثر من دورة</small>
            </div>

            <h4 class="section-title"><i class="fas fa-file-upload"></i> المرفقات</h4>
            
            @if (!string.IsNullOrEmpty(Model.CurrentCertificateFileName))
            {
                <div class="current-file-info">
                    <i class="fas fa-file-pdf"></i> الشهادة الحالية: <strong>@Model.CurrentCertificateFileName</strong>
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.CurrentPhotoPath))
            {
                <div class="current-file-info">
                    <i class="fas fa-image"></i> يوجد صورة حالية
                </div>
            }
            
            <div class="form-grid">
                <div class="form-group">
                    <label asp-for="CertificateFile" class="form-label"></label>
                    <input asp-for="CertificateFile" type="file" accept=".pdf" class="form-control" />
                    <small class="form-text text-muted">PDF فقط - الحد الأقصى: 10 MB</small>
                    <span asp-validation-for="CertificateFile" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhotoFile" class="form-label"></label>
                    <input asp-for="PhotoFile" type="file" accept="image/*" class="form-control" />
                    <small class="form-text text-muted">صورة - الحد الأقصى: 10 MB</small>
                    <span asp-validation-for="PhotoFile" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="form-check">
                    <input asp-for="IsActive" type="checkbox" class="form-check-input" id="IsActive" />
                    <label asp-for="IsActive" for="IsActive" class="form-check-label">الحافظ نشط</label>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> حفظ التعديلات
                </button>
                <a href="@Url.Action("Index")" class="btn btn-outline">
                    <i class="fas fa-times"></i> إلغاء
                </a>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <style>
        .section-title {
            color: var(--primary-dark);
            margin: 25px 0 20px;
            padding-bottom: 10px;
            border-bottom: 2px solid var(--primary-light);
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .section-title i {
            color: var(--primary-color);
        }
        
        .form-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-bottom: 20px;
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        .form-label {
            display: block;
            font-weight: 600;
            color: var(--primary-dark);
            margin-bottom: 8px;
            font-size: 0.95rem;
        }
        
        .form-control {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid var(--border-color);
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background-color: #f9f9f9;
        }
        
        .form-control:focus {
            border-color: var(--primary-light);
            outline: none;
            box-shadow: 0 0 0 3px rgba(76, 175, 80, 0.15);
            background-color: white;
        }
        
        select.form-control {
            cursor: pointer;
        }

        select[multiple].form-control {
            height: auto;
            background-color: #f9f9f9;
        }

        select[multiple].form-control option {
            padding: 8px 12px;
            cursor: pointer;
        }

        select[multiple].form-control option:hover,
        select[multiple].form-control option:checked {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            color: white;
        }
        
        textarea.form-control {
            resize: vertical;
            font-family: 'Tajawal', sans-serif;
        }

        input[type="file"].form-control {
            padding: 10px;
            cursor: pointer;
        }

        input[type="file"].form-control::-webkit-file-upload-button {
            padding: 8px 15px;
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            color: white;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            margin-left: 10px;
            transition: all 0.3s ease;
        }

        input[type="file"].form-control::-webkit-file-upload-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(76, 175, 80, 0.3);
        }

        .current-file-info {
            padding: 12px 15px;
            background: #e3f2fd;
            border-right: 4px solid #2196f3;
            border-radius: 6px;
            margin-bottom: 15px;
            color: #1565c0;
        }

        .current-file-info i {
            margin-left: 8px;
        }
        
        .form-check {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 12px;
            background: var(--light-bg);
            border-radius: 8px;
        }
        
        .form-check-input {
            width: 20px;
            height: 20px;
            cursor: pointer;
        }
        
        .form-check-label {
            cursor: pointer;
            font-weight: 500;
            margin: 0;
        }
        
        .form-actions {
            display: flex;
            gap: 10px;
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid var(--border-color);
        }

        .form-text {
            display: block;
            margin-top: 5px;
            font-size: 0.875rem;
        }

        .text-muted {
            color: #6c757d;
        }
        
        .text-danger {
            color: var(--danger-color);
            font-size: 0.85rem;
            margin-top: 5px;
            display: block;
        }
        
        .alert {
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
        }
        
        .alert-danger {
            background-color: #ffebee;
            color: #c62828;
            border: 1px solid #ef5350;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // عند submit الفورم، نأخذ الدورات المختارة ونضيفها للـ hidden inputs
            $('form').on('submit', function() {
                // إزالة أي hidden inputs سابقة
                $('input[name="CompletedCourseIds"]').remove();
                
                // إضافة الدورات المختارة
                $('#coursesSelect option:selected').each(function() {
                    $('<input>').attr({
                        type: 'hidden',
                        name: 'CompletedCourseIds',
                        value: $(this).val()
                    }).appendTo('form');
                });
            });
        });
    </script>
}
