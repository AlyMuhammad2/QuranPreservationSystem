@model QuranPreservationSystem.Application.DTOs.CenterDto
@{
    ViewData["Title"] = "تفاصيل المركز";
    Layout = "_DashboardLayout";
}

<!-- Page Header -->
<div class="page-header">
    <div class="page-title">
        <i class="fas fa-mosque"></i>
        <h2>تفاصيل المركز</h2>
    </div>
    <div class="page-actions">
        <a href="@Url.Action("Edit", new { id = Model.CenterId })" class="btn btn-warning">
            <i class="fas fa-edit"></i> تعديل
        </a>
        <a href="@Url.Action("Index")" class="btn btn-outline">
            <i class="fas fa-arrow-right"></i> العودة للقائمة
        </a>
    </div>
</div>

<!-- Center Info Card -->
<div class="card">
    <div class="card-header">
        <i class="fas fa-info-circle"></i>
        <span>معلومات المركز</span>
    </div>
    <div class="card-body">
        <div class="details-grid">
            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-tag"></i>
                    <span>اسم المركز</span>
                </div>
                <div class="detail-value">@Model.Name</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-map-marker-alt"></i>
                    <span>العنوان</span>
                </div>
                <div class="detail-value">@(Model.Address ?? "-")</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-phone"></i>
                    <span>رقم الهاتف</span>
                </div>
                <div class="detail-value">@(Model.PhoneNumber ?? "-")</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-calendar"></i>
                    <span>تاريخ الإنشاء</span>
                </div>
                <div class="detail-value">@Model.CreatedDate.ToString("dd/MM/yyyy")</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-toggle-on"></i>
                    <span>الحالة</span>
                </div>
                <div class="detail-value">
                    @if (Model.IsActive)
                    {
                        <span class="badge badge-success">نشط</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">غير نشط</span>
                    }
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="detail-item full-width">
                    <div class="detail-label">
                        <i class="fas fa-align-right"></i>
                        <span>الوصف</span>
                    </div>
                    <div class="detail-value">@Model.Description</div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Statistics Card -->
<div class="card">
    <div class="card-header">
        <i class="fas fa-chart-bar"></i>
        <span>الإحصائيات</span>
    </div>
    <div class="card-body">
        <div class="stats-container">
            <div class="stat-card stat-success">
                <div class="stat-icon">
                    <i class="fas fa-chalkboard-teacher"></i>
                </div>
                <div class="stat-info">
                    <h3>@Model.TeachersCount</h3>
                    <p>المدرسين</p>
                </div>
            </div>

            <div class="stat-card stat-info">
                <div class="stat-icon">
                    <i class="fas fa-user-graduate"></i>
                </div>
                <div class="stat-info">
                    <h3>@Model.StudentsCount</h3>
                    <p>الطلاب</p>
                </div>
            </div>

            <div class="stat-card stat-warning">
                <div class="stat-icon">
                    <i class="fas fa-book"></i>
                </div>
                <div class="stat-info">
                    <h3>@Model.CoursesCount</h3>
                    <p>الدورات</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .details-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
        }
        
        .detail-item {
            padding: 15px;
            background: var(--light-bg);
            border-radius: 8px;
            border-right: 3px solid var(--primary-light);
        }
        
        .detail-item.full-width {
            grid-column: 1 / -1;
        }
        
        .detail-label {
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: 600;
            color: var(--primary-dark);
            margin-bottom: 8px;
            font-size: 0.9rem;
        }
        
        .detail-label i {
            color: var(--primary-color);
            width: 20px;
        }
        
        .detail-value {
            font-size: 1.05rem;
            color: var(--dark-text);
            padding-right: 30px;
        }
        
        .badge {
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 0.85rem;
            font-weight: 600;
        }
        
        .badge-success {
            background: rgba(67, 160, 71, 0.15);
            color: var(--success-color);
        }
        
        .badge-danger {
            background: rgba(229, 57, 53, 0.15);
            color: var(--danger-color);
        }
    </style>
}

