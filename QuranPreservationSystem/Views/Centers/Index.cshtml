@model IEnumerable<QuranPreservationSystem.Application.DTOs.CenterDto>
@{
    ViewData["Title"] = "المراكز القرآنية";
    Layout = "_DashboardLayout";
}

<!-- Page Header -->
<div class="page-header">
    <div class="page-title">
        <i class="fas fa-mosque"></i>
        <h2>المراكز القرآنية</h2>
    </div>
    <div class="page-actions">
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-plus"></i> إضافة مركز جديد
        </a>
    </div>
</div>

<!-- Centers Table Card -->
<div class="card">
    <div class="card-header">
        <i class="fas fa-list"></i>
        <span>قائمة المراكز (@Model.Count())</span>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>اسم المركز</th>
                            <th>العنوان</th>
                            <th>الهاتف</th>
                            <th>الحالة</th>
                            <th>تاريخ الإنشاء</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = 1;
                        }
                        @foreach (var center in Model)
                        {
                            <tr>
                                <td>@index</td>
                                <td><strong>@center.Name</strong></td>
                                <td>@(center.Address ?? "-")</td>
                                <td>@(center.PhoneNumber ?? "-")</td>
                                <td>
                                    @if (center.IsActive)
                                    {
                                        <span class="badge badge-success">نشط</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">غير نشط</span>
                                    }
                                </td>
                                <td>@center.CreatedDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="@Url.Action("Details", new { id = center.CenterId })" class="btn-icon btn-info" title="التفاصيل">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", new { id = center.CenterId })" class="btn-icon btn-warning" title="تعديل">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = center.CenterId })" class="btn-icon btn-danger" title="حذف">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            index++;
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-mosque"></i>
                <h3>لا توجد مراكز</h3>
                <p>ابدأ بإضافة مركز جديد</p>
                <a href="@Url.Action("Create")" class="btn btn-primary">
                    <i class="fas fa-plus"></i> إضافة مركز
                </a>
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
        .table-responsive {
            overflow-x: auto;
        }
        
        .data-table {
            width: 100%;
            border-collapse: collapse;
            background: white;
        }
        
        .data-table th {
            background-color: var(--primary-light);
            color: white;
            padding: 15px;
            text-align: right;
            font-weight: 600;
            font-size: 0.95rem;
        }
        
        .data-table td {
            padding: 14px 15px;
            border-bottom: 1px solid var(--border-color);
            vertical-align: middle;
        }
        
        .data-table tbody tr:hover {
            background-color: #f0f7f0;
        }
        
        .action-buttons {
            display: flex;
            gap: 8px;
        }
        
        .btn-icon {
            width: 35px;
            height: 35px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 6px;
            color: white;
            text-decoration: none;
            transition: all 0.2s ease;
            font-size: 0.9rem;
        }
        
        .btn-icon.btn-info {
            background: var(--info-color);
        }
        
        .btn-icon.btn-info:hover {
            background: #1976d2;
        }
        
        .btn-icon.btn-warning {
            background: var(--warning-color);
        }
        
        .btn-icon.btn-warning:hover {
            background: #ef6c00;
        }
        
        .btn-icon.btn-danger {
            background: var(--danger-color);
        }
        
        .btn-icon.btn-danger:hover {
            background: #c62828;
        }
        
        .badge {
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 0.85rem;
            font-weight: 600;
        }
        
        .badge-success {
            background: rgba(67, 160, 71, 0.15);
            color: var(--success-color);
        }
        
        .badge-danger {
            background: rgba(229, 57, 53, 0.15);
            color: var(--danger-color);
        }
        
        .empty-state {
            text-align: center;
            padding: 60px 20px;
        }
        
        .empty-state i {
            font-size: 4rem;
            color: var(--primary-light);
            margin-bottom: 20px;
            opacity: 0.5;
        }
        
        .empty-state h3 {
            color: var(--primary-dark);
            margin-bottom: 10px;
            font-size: 1.5rem;
        }
        
        .empty-state p {
            color: #666;
            margin-bottom: 25px;
            font-size: 1.1rem;
        }
    </style>
}

