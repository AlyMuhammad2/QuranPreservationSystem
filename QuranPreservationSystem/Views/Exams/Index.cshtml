@model IEnumerable<QuranPreservationSystem.Application.DTOs.ExamDto>
@{
    ViewData["Title"] = "الاختبارات";
    Layout = "_DashboardLayout";
    var centers = ViewBag.Centers as IEnumerable<QuranPreservationSystem.Domain.Entities.Center>;
    var currentSearch = ViewBag.CurrentSearch as string;
    var currentCenterId = ViewBag.CurrentCenterId as int?;
}

<!-- Page Header -->
<div class="page-header">
    <div class="page-title">
        <i class="fas fa-clipboard-list"></i>
        <h2>إدارة الاختبارات</h2>
    </div>
    <div class="page-actions">
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-plus"></i> إضافة اختبار جديد
        </a>
    </div>
</div>

<!-- Search and Filter Section -->
<div class="card" style="margin-bottom: 20px;">
    <div class="card-body" style="padding: 20px;">
        <form method="get" asp-action="Index" class="search-filter-form">
            <div class="filter-grid">
                <div class="search-box">
                    <label for="searchTerm" class="filter-label">
                        <i class="fas fa-search"></i> البحث بالاسم
                    </label>
                    <input type="text" 
                           id="searchTerm" 
                           name="searchTerm" 
                           class="form-control" 
                           placeholder="ابحث باسم الاختبار..." 
                           value="@currentSearch" />
                </div>

                <div class="filter-box">
                    <label for="centerId" class="filter-label">
                        <i class="fas fa-mosque"></i> المركز
                    </label>
                    <select id="centerId" name="centerId" class="form-control">
                        <option value="">جميع المراكز</option>
                        @if (centers != null)
                        {
                            foreach (var center in centers)
                            {
                                <option value="@center.CenterId" selected="@(currentCenterId == center.CenterId)">
                                    @center.Name
                                </option>
                            }
                        }
                    </select>
                </div>

                <div class="filter-actions">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-filter"></i> تطبيق
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-outline">
                        <i class="fas fa-redo"></i> إعادة تعيين
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Stats Summary -->
<div class="stats-container" style="margin-bottom: 25px;">
    <div class="stat-card stat-success">
        <div class="stat-icon">
            <i class="fas fa-clipboard-list"></i>
        </div>
        <div class="stat-info">
            <h3>@Model.Count()</h3>
            <p>إجمالي الاختبارات</p>
        </div>
    </div>
    
    <div class="stat-card stat-info">
        <div class="stat-icon">
            <i class="fas fa-check-circle"></i>
        </div>
        <div class="stat-info">
            <h3>@Model.Count(e => e.IsActive)</h3>
            <p>الاختبارات النشطة</p>
        </div>
    </div>
    
    <div class="stat-card stat-warning">
        <div class="stat-icon">
            <i class="fas fa-file-pdf"></i>
        </div>
        <div class="stat-info">
            <h3>@Model.Count(e => !string.IsNullOrEmpty(e.PdfFileName))</h3>
            <p>اختبارات مع PDF</p>
        </div>
    </div>
</div>

<!-- Exams Table -->
<div class="card">
    <div class="card-header">
        <i class="fas fa-list"></i>
        <span>قائمة الاختبارات</span>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>اسم الاختبار</th>
                            <th>النوع</th>
                            <th>المستوى</th>
                            <th>المركز</th>
                            <th>الدورة</th>
                            <th>ملف PDF</th>
                            <th>الحالة</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = 1;
                        }
                        @foreach (var exam in Model)
                        {
                            <tr>
                                <td>@index</td>
                                <td><strong>@exam.ExamName</strong></td>
                                <td>@exam.ExamType</td>
                                <td>@exam.Level</td>
                                <td>@(exam.CenterName ?? "-")</td>
                                <td>@(exam.CourseName ?? "-")</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(exam.PdfFileName))
                                    {
                                        <a href="@Url.Action("Download", new { id = exam.ExamId })" class="btn-icon btn-primary" title="تحميل PDF">
                                            <i class="fas fa-download"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (exam.IsActive)
                                    {
                                        <span class="badge badge-success">نشط</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">غير نشط</span>
                                    }
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="@Url.Action("Details", new { id = exam.ExamId })" class="btn-icon btn-info" title="التفاصيل">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", new { id = exam.ExamId })" class="btn-icon btn-warning" title="تعديل">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = exam.ExamId })" class="btn-icon btn-danger" title="حذف">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            index++;
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-clipboard-list"></i>
                <h3>لا يوجد اختبارات</h3>
                <p>ابدأ بإضافة اختبار جديد</p>
                <a href="@Url.Action("Create")" class="btn btn-primary">
                    <i class="fas fa-plus"></i> إضافة اختبار
                </a>
            </div>
        }
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/dashboard.css" />
    <style>
        .filter-grid {
            display: grid;
            grid-template-columns: 1fr 1fr auto;
            gap: 20px;
            align-items: end;
        }
        
        .search-box, .filter-box {
            display: flex;
            flex-direction: column;
        }
        
        .filter-label {
            font-weight: 600;
            color: var(--primary-dark);
            margin-bottom: 8px;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .filter-label i {
            color: var(--primary-color);
        }
        
        .filter-actions {
            display: flex;
            gap: 10px;
        }
        
        .search-filter-form .form-control {
            padding: 10px 15px;
            border: 1px solid var(--border-color);
            border-radius: 8px;
            font-size: 0.95rem;
            transition: all 0.3s ease;
        }
        
        .search-filter-form .form-control:focus {
            border-color: var(--primary-light);
            outline: none;
            box-shadow: 0 0 0 3px rgba(76, 175, 80, 0.15);
        }
        
        @@media (max-width: 992px) {
            .filter-grid {
                grid-template-columns: 1fr;
            }
            
            .filter-actions {
                width: 100%;
            }
            
            .filter-actions .btn {
                flex: 1;
            }
        }
    </style>
}
