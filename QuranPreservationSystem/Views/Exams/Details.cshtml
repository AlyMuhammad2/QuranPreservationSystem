@model QuranPreservationSystem.Application.DTOs.ExamDto
@{
    ViewData["Title"] = "تفاصيل الاختبار";
    Layout = "_DashboardLayout";
}

<!-- Page Header -->
<div class="page-header">
    <div class="page-title">
        <i class="fas fa-clipboard-list"></i>
        <h2>تفاصيل الاختبار</h2>
    </div>
    <div class="page-actions">
        <a href="@Url.Action("Edit", new { id = Model.ExamId })" class="btn btn-warning">
            <i class="fas fa-edit"></i> تعديل
        </a>
        <a href="@Url.Action("Index")" class="btn btn-outline">
            <i class="fas fa-arrow-right"></i> العودة للقائمة
        </a>
    </div>
</div>

<!-- Basic Info Card -->
<div class="card">
    <div class="card-header">
        <i class="fas fa-info-circle"></i>
        <span>معلومات الاختبار الأساسية</span>
    </div>
    <div class="card-body">
        <div class="details-grid">
            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-file-alt"></i>
                    <span>اسم الاختبار</span>
                </div>
                <div class="detail-value"><strong>@Model.ExamName</strong></div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-tag"></i>
                    <span>نوع الاختبار</span>
                </div>
                <div class="detail-value">@Model.ExamType</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-layer-group"></i>
                    <span>المستوى</span>
                </div>
                <div class="detail-value">@Model.Level</div>
            </div>

            @if (Model.TotalMarks.HasValue)
            {
                <div class="detail-item">
                    <div class="detail-label">
                        <i class="fas fa-star"></i>
                        <span>الدرجة الكاملة</span>
                    </div>
                    <div class="detail-value">
                        <strong class="text-success">@Model.TotalMarks</strong>
                        @if (Model.PassingMarks.HasValue)
                        {
                            <span class="text-muted">(نجاح: @Model.PassingMarks)</span>
                        }
                    </div>
                </div>
            }

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-toggle-on"></i>
                    <span>الحالة</span>
                </div>
                <div class="detail-value">
                    @if (Model.IsActive)
                    {
                        <span class="badge badge-success">نشط</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">غير نشط</span>
                    }
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <div class="detail-item full-width" style="margin-top: 20px;">
                <div class="detail-label">
                    <i class="fas fa-align-right"></i>
                    <span>وصف الاختبار</span>
                </div>
                <div class="detail-value">@Model.Description</div>
            </div>
        }
    </div>
</div>

<!-- Schedule and Location Card -->
<div class="card">
    <div class="card-header">
        <i class="fas fa-calendar-alt"></i>
        <span>التوقيت والمكان</span>
    </div>
    <div class="card-body">
        <div class="details-grid">
            @if (Model.StartTime.HasValue)
            {
                <div class="detail-item">
                    <div class="detail-label">
                        <i class="fas fa-clock"></i>
                        <span>وقت البداية</span>
                    </div>
                    <div class="detail-value">@Model.StartTime.Value.ToString(@"hh\:mm")</div>
                </div>
            }

            @if (Model.EndTime.HasValue)
            {
                <div class="detail-item">
                    <div class="detail-label">
                        <i class="fas fa-clock"></i>
                        <span>وقت النهاية</span>
                    </div>
                    <div class="detail-value">@Model.EndTime.Value.ToString(@"hh\:mm")</div>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.Location))
            {
                <div class="detail-item">
                    <div class="detail-label">
                        <i class="fas fa-map-marker-alt"></i>
                        <span>مكان الاختبار</span>
                    </div>
                    <div class="detail-value">@Model.Location</div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Center and Course Card -->
<div class="card">
    <div class="card-header">
        <i class="fas fa-link"></i>
        <span>المركز والدورة</span>
    </div>
    <div class="card-body">
        <div class="details-grid">
            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-mosque"></i>
                    <span>المركز</span>
                </div>
                <div class="detail-value">@Model.CenterName</div>
            </div>

            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-book"></i>
                    <span>الدورة</span>
                </div>
                <div class="detail-value">@Model.CourseName</div>
            </div>
        </div>
    </div>
</div>

<!-- PDF File Card -->
@if (!string.IsNullOrEmpty(Model.PdfFileName))
{
    <div class="card">
        <div class="card-header">
            <i class="fas fa-file-pdf"></i>
            <span>ملف PDF</span>
        </div>
        <div class="card-body">
            <div class="file-download-section">
                <div class="file-info">
                    <i class="fas fa-file-pdf"></i>
                    <div class="file-details">
                        <strong>@Model.PdfFileName</strong>
                        @if (!string.IsNullOrEmpty(Model.FileSizeFormatted))
                        {
                            <small class="text-muted">@Model.FileSizeFormatted</small>
                        }
                    </div>
                </div>
                <a href="@Url.Action("Download", new { id = Model.ExamId })" class="btn btn-primary">
                    <i class="fas fa-download"></i> تحميل الملف
                </a>
            </div>
        </div>
    </div>
}

<!-- Instructions Card -->
@if (!string.IsNullOrEmpty(Model.Instructions))
{
    <div class="card">
        <div class="card-header">
            <i class="fas fa-list-ol"></i>
            <span>تعليمات الاختبار</span>
        </div>
        <div class="card-body">
            <div class="detail-item full-width">
                <div class="detail-value">@Model.Instructions</div>
            </div>
        </div>
    </div>
}

<!-- Notes Card -->
@if (!string.IsNullOrEmpty(Model.Notes))
{
    <div class="card">
        <div class="card-header">
            <i class="fas fa-sticky-note"></i>
            <span>ملاحظات إضافية</span>
        </div>
        <div class="card-body">
            <div class="detail-item full-width">
                <div class="detail-value">@Model.Notes</div>
            </div>
        </div>
    </div>
}

<!-- System Information Card -->
<div class="card">
    <div class="card-header">
        <i class="fas fa-cog"></i>
        <span>معلومات النظام</span>
    </div>
    <div class="card-body">
        <div class="details-grid">
            <div class="detail-item">
                <div class="detail-label">
                    <i class="fas fa-calendar-plus"></i>
                    <span>تاريخ الإنشاء</span>
                </div>
                <div class="detail-value">@Model.CreatedDate.ToString("dd/MM/yyyy hh:mm tt")</div>
            </div>

            @if (Model.LastModifiedDate.HasValue)
            {
                <div class="detail-item">
                    <div class="detail-label">
                        <i class="fas fa-calendar-check"></i>
                        <span>آخر تعديل</span>
                    </div>
                    <div class="detail-value">@Model.LastModifiedDate.Value.ToString("dd/MM/yyyy hh:mm tt")</div>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .details-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
        }
        
        .detail-item {
            padding: 15px;
            background: var(--light-bg);
            border-radius: 8px;
            border-right: 3px solid var(--primary-light);
        }
        
        .detail-item.full-width {
            grid-column: 1 / -1;
        }
        
        .detail-label {
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: 600;
            color: var(--primary-dark);
            margin-bottom: 8px;
            font-size: 0.9rem;
        }
        
        .detail-label i {
            color: var(--primary-color);
            width: 20px;
        }
        
        .detail-value {
            font-size: 1.05rem;
            color: var(--dark-text);
            padding-right: 30px;
        }
        
        .badge {
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 0.85rem;
            font-weight: 600;
        }
        
        .badge-success {
            background: rgba(67, 160, 71, 0.15);
            color: var(--success-color);
        }
        
        .badge-danger {
            background: rgba(229, 57, 53, 0.15);
            color: var(--danger-color);
        }
        
        .file-download-section {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 15px;
            padding: 15px;
            background: var(--light-bg);
            border-radius: 8px;
            border-right: 3px solid var(--primary-light);
        }
        
        .file-info {
            display: flex;
            align-items: center;
            gap: 12px;
            flex: 1;
        }
        
        .file-info i {
            font-size: 2rem;
            color: #d32f2f;
        }
        
        .file-details {
            display: flex;
            flex-direction: column;
        }
        
        .file-details strong {
            font-weight: 600;
            color: var(--primary-dark);
        }
        
        .file-details small {
            font-size: 0.85rem;
            color: #6c757d;
        }
        
        .text-success {
            color: var(--success-color);
        }
        
        .text-muted {
            color: #6c757d;
            font-size: 0.9rem;
        }
    </style>
}
